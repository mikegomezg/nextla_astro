---
import MobileNav from '../components/MobileNav.astro';

interface Props {
  title: string;
  description: string;
  activePage?: string;
}

const { title, description, activePage = 'home' } = Astro.props;
// Active link determination
const pathname = Astro.url.pathname;

// Check for mode (technical or narrative)
const url = new URL(Astro.request.url);
const mode = url.searchParams.get('mode') || (pathname.startsWith('/narrative/') ? 'narrative' : 'technical');

// Import the logo with fallback handling
let logomarkSrc;
try {
  // Try to import the SVG directly from public
  logomarkSrc = '/static/logo/nextla-logomark.svg';
} catch (error) {
  // Fallback to text only if image isn't found
  console.warn('Logo image not found, using fallback');
  logomarkSrc = '';
}

// Flag to check if image loads successfully
const hasLogo = logomarkSrc !== '';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#05061A" />
    <meta name="color-scheme" content="dark" />
    <title>{title}</title>
    <link rel="icon" href="/static/favicons/favicon.svg" type="image/svg+xml" />
    
    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;700&family=JetBrains+Mono&display=swap" />
    
    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/static/og-image.jpg" />
  </head>
  
  <body class="bg-primary-900 text-white font-body antialiased">
    <MobileNav activePage={activePage} />
    
    <main class="pt-16">
      <slot />
    </main>
    
    <footer class="py-8 sm:py-12 bg-primary-800 border-t border-primary-700/50 mt-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <div>
            <h3 class="text-xl font-bold mb-4 text-white">Mirador</h3>
            <p class="text-neutral-400 mb-4">
              A world where attention has become the primary currency and power.
            </p>
          </div>
          
          <div>
            <h4 class="font-bold mb-4 text-white">Navigation</h4>
            <ul class="space-y-2">
              <li><a href="/" class="text-neutral-400 hover:text-secondary-400 transition-colors">Home</a></li>
              <li><a href="/about" class="text-neutral-400 hover:text-secondary-400 transition-colors">About</a></li>
              <li><a href="/technical" class="text-neutral-400 hover:text-secondary-400 transition-colors">Technical Path</a></li>
              <li><a href="/narrative" class="text-neutral-400 hover:text-secondary-400 transition-colors">Narrative Path</a></li>
            </ul>
          </div>
          
          <div>
            <h4 class="font-bold mb-4 text-white">Connect</h4>
            <div class="flex space-x-4">
              <a href="#" class="text-neutral-400 hover:text-secondary-400 transition-colors">
                <span class="sr-only">Twitter</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
