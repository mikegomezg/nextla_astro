---
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/static/favicons/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;700&family=JetBrains+Mono&display=swap" />
  </head>
  <body class="bg-primary-900 text-white font-body">
    <main>
      <slot />
    </main>
    
    <footer class="bg-primary-800 text-neutral-400 py-8 border-t border-secondary-500/20">
      <div class="container mx-auto px-4 text-center">
        <p>&copy; {new Date().getFullYear()} Mirador. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html> 