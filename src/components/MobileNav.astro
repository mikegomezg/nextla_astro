---
interface Props {
  activePage?: string;
}

const { activePage = 'home' } = Astro.props;
---

<nav class="mobile-nav">
  <!-- Header bar -->
  <div id="header" class="fixed top-0 left-0 w-full z-50 px-4 py-3 bg-primary-800/90 backdrop-blur-md transition-all duration-300 shadow-md">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-heading font-bold flex items-center space-x-2">
        <span class="text-secondary-500">M</span><span>irador</span>
      </a>
      <button id="menu-toggle" class="p-2 rounded-md hover:bg-primary-700 transition-colors focus:outline-none focus:ring-2 focus:ring-secondary-500" aria-label="Toggle menu">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>

  <!-- Fullscreen menu overlay -->
  <div id="menu-overlay" class="fixed inset-0 bg-primary-900/98 z-40 opacity-0 pointer-events-none transition-opacity duration-300 flex flex-col justify-center">
    <button id="close-menu" class="absolute top-4 right-4 p-2 text-white hover:text-secondary-300 transition-colors focus:outline-none" aria-label="Close menu">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    
    <div class="container mx-auto px-6">
      <ul class="space-y-6 text-center">
        <li class="menu-item" data-active={activePage === 'home'}>
          <a href="/" class="block py-3 text-2xl font-heading font-medium transition-colors relative group">
            <span class="relative z-10">Home</span>
            <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-secondary-500 transition-all duration-300 group-hover:w-16"></span>
          </a>
        </li>
        <li class="menu-item" data-active={activePage === 'about'}>
          <a href="/about" class="block py-3 text-2xl font-heading font-medium transition-colors relative group">
            <span class="relative z-10">About</span>
            <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-secondary-500 transition-all duration-300 group-hover:w-16"></span>
          </a>
        </li>
        <li class="menu-item" data-active={activePage === 'technical'}>
          <a href="/technical" class="block py-3 text-2xl font-heading font-medium transition-colors relative group">
            <span class="relative z-10">Technical Path</span>
            <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-secondary-500 transition-all duration-300 group-hover:w-16"></span>
          </a>
        </li>
        <li class="menu-item" data-active={activePage === 'narrative'}>
          <a href="/narrative" class="block py-3 text-2xl font-heading font-medium transition-colors relative group">
            <span class="relative z-10">Narrative Path</span>
            <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-secondary-500 transition-all duration-300 group-hover:w-16"></span>
          </a>
        </li>
      </ul>
      
      <div class="mt-12 flex justify-center space-x-6">
        <a href="#" class="text-neutral-400 hover:text-secondary-300 transition-colors">
          <span class="sr-only">Twitter</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
          </svg>
        </a>
        <a href="#" class="text-neutral-400 hover:text-secondary-300 transition-colors">
          <span class="sr-only">GitHub</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  
  <!-- Bottom tab navigation (shows on scroll up) -->
  <div id="bottom-tabs" class="fixed bottom-0 left-0 w-full z-40 bg-primary-800/95 backdrop-blur-md border-t border-primary-700 transform translate-y-full transition-transform duration-300 md:hidden">
    <div class="flex justify-around py-2">
      <a href="/" class={`tab-item ${activePage === 'home' ? 'text-secondary-500' : 'text-neutral-400'}`}>
        <div class="flex flex-col items-center p-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          <span class="text-xs mt-1">Home</span>
        </div>
      </a>
      <a href="/about" class={`tab-item ${activePage === 'about' ? 'text-secondary-500' : 'text-neutral-400'}`}>
        <div class="flex flex-col items-center p-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="16" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12.01" y2="8"></line>
          </svg>
          <span class="text-xs mt-1">About</span>
        </div>
      </a>
      <a href="/technical" class={`tab-item ${activePage === 'technical' ? 'text-secondary-500' : 'text-neutral-400'}`}>
        <div class="flex flex-col items-center p-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
          <span class="text-xs mt-1">Technical</span>
        </div>
      </a>
      <a href="/narrative" class={`tab-item ${activePage === 'narrative' ? 'text-secondary-500' : 'text-neutral-400'}`}>
        <div class="flex flex-col items-center p-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"></path>
          </svg>
          <span class="text-xs mt-1">Narrative</span>
        </div>
      </a>
    </div>
  </div>
</nav>

<style>
  .menu-item[data-active="true"] a span:last-child {
    width: 4rem;
  }
  
  .tab-item {
    @apply transition-colors duration-200;
  }
  
  .tab-item:hover {
    @apply text-secondary-400;
  }
</style>

<script>
  // Mobile menu functionality
  const menuToggle = document.getElementById('menu-toggle');
  const closeMenu = document.getElementById('close-menu');
  const menuOverlay = document.getElementById('menu-overlay');
  const bottomTabs = document.getElementById('bottom-tabs');
  const header = document.getElementById('header');
  
  if (menuToggle && closeMenu && menuOverlay) {
    menuToggle.addEventListener('click', () => {
      menuOverlay.classList.add('opacity-100');
      menuOverlay.classList.remove('pointer-events-none');
      document.body.classList.add('overflow-hidden');
    });
    
    closeMenu.addEventListener('click', () => {
      menuOverlay.classList.remove('opacity-100');
      menuOverlay.classList.add('pointer-events-none');
      document.body.classList.remove('overflow-hidden');
    });
  }
  
  // Show/hide bottom tabs based on scroll direction
  if (bottomTabs) {
    let lastScrollY = 0;
    let ticking = false;
    
    const updateBottomTabs = () => {
      const scrollY = window.scrollY;
      
      // Show tabs when scrolling up or at the top
      if (scrollY < lastScrollY || scrollY < 10) {
        bottomTabs.classList.remove('translate-y-full');
      } else {
        bottomTabs.classList.add('translate-y-full');
      }
      
      // Update header transparency
      if (scrollY > 100) {
        header.classList.add('bg-primary-800');
        header.classList.remove('bg-primary-800/90');
      } else {
        header.classList.add('bg-primary-800/90');
        header.classList.remove('bg-primary-800');
      }
      
      lastScrollY = scrollY;
      ticking = false;
    };
    
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(updateBottomTabs);
        ticking = true;
      }
    });
  }
</script> 