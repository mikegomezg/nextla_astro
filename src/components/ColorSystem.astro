---
const colorCategories = [
  {
    name: 'Primary (Deep Navy)',
    description: 'Used for primary elements, main navigation, and key UI components',
    colors: [
      { name: '100', value: '#E8E8F0' },
      { name: '200', value: '#C5C7E0' },
      { name: '300', value: '#9A9DCE' },
      { name: '400', value: '#2A34A4' },
      { name: '500', value: '#1A237E' },
      { name: '600', value: '#151B69' },
      { name: '700', value: '#10144F' },
      { name: '800', value: '#0A0C35' },
      { name: '900', value: '#05061A' },
    ]
  },
  {
    name: 'Secondary (Jade Green)',
    description: 'Used for secondary elements, success states, and growth indicators',
    colors: [
      { name: '100', value: '#E6F0EC' },
      { name: '200', value: '#C2DBD1' },
      { name: '300', value: '#9BC3B5' },
      { name: '400', value: '#37865F' },
      { name: '500', value: '#2E6E4E' },
      { name: '600', value: '#255A3F' },
      { name: '700', value: '#1C4330' },
      { name: '800', value: '#132D20' },
      { name: '900', value: '#091610' },
    ]
  },
  {
    name: 'Accent (Earthy Red)',
    description: 'Used for accents, calls to action, and highlighting important information',
    colors: [
      { name: '100', value: '#F5E9E7' },
      { name: '200', value: '#E6C9C5' },
      { name: '300', value: '#D6A6A0' },
      { name: '400', value: '#C24B3A' },
      { name: '500', value: '#A63D2F' },
      { name: '600', value: '#8A3327' },
      { name: '700', value: '#6F281F' },
      { name: '800', value: '#4D1C15' },
      { name: '900', value: '#2A0F0B' },
    ]
  },
  {
    name: 'Neutral',
    description: 'Used for text, backgrounds, and UI elements that need to be understated',
    colors: [
      { name: '100', value: '#F5F5F5' },
      { name: '200', value: '#E5E5E5' },
      { name: '300', value: '#D4D4D4' },
      { name: '400', value: '#A3A3A3' },
      { name: '500', value: '#737373' },
      { name: '600', value: '#525252' },
      { name: '700', value: '#404040' },
      { name: '800', value: '#262626' },
      { name: '900', value: '#1A1A1A' },
    ]
  }
];
---

<section class="max-w-4xl mx-auto py-12">
  <h2 class="text-2xl font-heading font-medium mb-8">Nextla Color System</h2>
  
  {colorCategories.map(category => (
    <div class="mb-12">
      <h3 class="text-xl font-heading mb-2">{category.name}</h3>
      <p class="mb-4">{category.description}</p>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        {category.colors.map(color => (
          <div class="flex items-center p-4 border border-neutral-200 rounded">
            <div class="w-16 h-16 rounded mr-4" style={`background-color: ${color.value}`}></div>
            <div>
              <div class="font-mono text-sm">{color.value}</div>
              <div class="text-neutral-500">{category.name.split(' ')[0].toLowerCase()}-{color.name}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  ))}

  <div class="mt-8 p-6 bg-neutral-100 rounded-lg border border-neutral-200">
    <h3 class="text-xl font-heading mb-4">Utility Colors</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="flex items-center p-4 border border-neutral-200 rounded bg-white">
        <div class="w-16 h-16 rounded mr-4" style="background-color: #FFC107"></div>
        <div>
          <div class="font-mono text-sm">#FFC107</div>
          <div class="text-neutral-500">alert</div>
        </div>
      </div>
      <div class="flex items-center p-4 border border-neutral-200 rounded bg-white">
        <div class="w-16 h-16 rounded mr-4" style="background-color: #4CAF50"></div>
        <div>
          <div class="font-mono text-sm">#4CAF50</div>
          <div class="text-neutral-500">success</div>
        </div>
      </div>
    </div>
  </div>
</section> 