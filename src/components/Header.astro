---
import { Image } from "astro:assets";
import logo from "../assets/logos/logo.svg";
---

<header
  class="flex z-50
      h-20 w-full
      px-6
      bg-black
      items-center justify-between fixed top-0
      md:h-24"
>
  <div class="flex
      items-center">
    <img src={logo.src} alt="Nexla Logo" class="h-12
        md:h-16" />
    <span
      class="ml-2
        text-2xl font-black text-highlight tracking-[.04em]
        md:text-3xl"
    >
      Nexla
    </span>
  </div>

  <!-- Desktop Navigation -->
  <nav class="hidden
      space-x-8 mx-auto
      md:flex">
    <a
      href="#"
      class="text-base font-semibold text-text tracking-wide
        hover:text-highlight
        md:text-lg"
      >Home</a
    >
    <a
      href="#feather"
      class="text-base font-semibold text-text tracking-wide
        hover:text-highlight
        md:text-lg"
      >About</a
    >
    <a
      href="#characters"
      class="text-base font-semibold text-text tracking-wide
        hover:text-highlight
        md:text-lg"
      >Characters</a
    >
    <a
      href="#cta"
      class="text-base font-semibold text-text tracking-wide
        hover:text-highlight
        md:text-lg"
      >Join</a
    >
  </nav>

  <div class="flex
      items-center">
    <!-- Theme Toggle -->
    <button
      id="theme-toggle"
      aria-label="Toggle color theme"
      class="flex
          p-2
          bg-surface
          rounded-md
          hover:bg-surface/70 items-center justify-center"
      onclick="window.toggleTheme()"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5
          text-text
          dark:text-highlight"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
          class="dark:hidden"></path>
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
          class="hidden
            dark:block"></path>
      </svg>
    </button>

    <!-- Mobile Menu Toggle -->
    <button
      id="menu-toggle"
      aria-label="Toggle navigation menu"
      class="p-2 ml-2
        text-text
        focus:outline-none
        md:hidden"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Navigation -->
  <nav
    id="mobile-menu"
    class="hidden flex flex-col
        space-y-6
        text-xl
        bg-black bg-opacity-95
        fixed inset-0 items-center justify-center
        md:hidden"
  >
    <a href="#" class="text-text
        hover:text-highlight">Home</a>
    <a href="#feather" class="text-text
        hover:text-highlight">About</a>
    <a href="#characters" class="text-text
        hover:text-highlight"
      >Characters</a
    >
    <a href="#cta" class="text-text
        hover:text-highlight">Join</a>

    <!-- Theme toggle in mobile -->
    <button
      id="mobile-theme-toggle"
      aria-label="Toggle color theme"
      class="flex
          mt-4 p-2
          bg-surface
          rounded-md
          hover:bg-surface/70 items-center justify-center"
      onclick="window.toggleTheme()"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5
          text-text
          dark:text-highlight"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
          class="dark:hidden"></path>
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
          class="hidden
            dark:block"></path>
      </svg>
      <span class="ml-2
          text-text">Toggle Theme</span>
    </button>

    <!-- Close Menu -->
    <button
      id="close-menu"
      aria-label="Close navigation menu"
      class="mt-8 p-2
        text-text
        focus:outline-none"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </nav>
</header>

<!-- Accent line -->
<div
  class="h-[4px]
      mt-20
      bg-highlight bg-repeat-x bg-center bg-[length:100px_4px]
      md:mt-24"
>
</div>
