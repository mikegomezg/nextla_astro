---
import { Image } from "astro:assets";
import logo from "../assets/logos/logo.svg";
---

<header
    class="bg-black h-20 md:h-24 flex justify-between items-center px-6 fixed w-full top-0 z-50"
>   
    <div class="flex items-center">
        <img src={logo.src} alt="Nexla Logo" class="h-12 md:h-16" />
        <span class="ml-2 text-xl md:text-2xl font-bold text-highlight">Nexla</span>
    </div>

    <!-- Mobile Menu Toggle -->
    <button
        id="menu-toggle"
        aria-label="Toggle navigation menu"
        class="text-textDefault p-2 focus:outline-none md:hidden"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-6">
        <a href="#" class="text-sm md:text-base text-textDefault hover:text-highlight"
            >Home</a
        >
        <a
            href="#feather"
            class="text-sm md:text-base text-textDefault hover:text-highlight">About</a
        >
        <a
            href="#characters"
            class="text-sm md:text-base text-textDefault hover:text-highlight"
            >Characters</a
        >
        <a href="#cta" class="text-sm md:text-base text-textDefault hover:text-highlight"
            >Join</a
        >
    </nav>

    <!-- Mobile Navigation -->
    <nav
        id="mobile-menu"
        class="fixed inset-0 bg-black bg-opacity-95 md:hidden hidden flex flex-col items-center justify-center space-y-6 text-xl"
    >
        <a href="#" class="text-textDefault hover:text-highlight">Home</a>
        <a href="#feather" class="text-textDefault hover:text-highlight">About</a>
        <a href="#characters" class="text-textDefault hover:text-highlight">Characters</a>
        <a href="#cta" class="text-textDefault hover:text-highlight">Join</a>
        <button
            id="close-menu"
            aria-label="Close navigation menu"
            class="mt-8 text-textDefault p-2 focus:outline-none"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </nav>
</header>

<div
    class="h-[4px] bg-highlight] bg-repeat-x bg-center bg-[length:100px_4px] mt-20 md:mt-24"
>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const menuToggle = document.getElementById("menu-toggle");
        const closeMenu = document.getElementById("close-menu");
        const mobileMenu = document.getElementById("mobile-menu");

        menuToggle?.addEventListener("click", () => {
            mobileMenu?.classList.remove("hidden");
        });

        closeMenu?.addEventListener("click", () => {
            mobileMenu?.classList.add("hidden");
        });

        // Close menu when clicking on a link
        const links = mobileMenu?.querySelectorAll("a");
        links?.forEach((link) => {
            link.addEventListener("click", () => {
                mobileMenu?.classList.add("hidden");
            });
        });
    });
</script>
