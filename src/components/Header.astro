---
import logo from "../assets/logos/logo.svg";
---

<header
    class="flex z-50 h-20 w-full px-6 bg-black items-center justify-between fixed top-0 md:h-24"
>
    <!-- Left side: Logo -->
    <div class="flex items-center flex-shrink-0">
        <img src={logo.src} alt="Nextla Logo" class="h-12 md:h-16" />
        <span
            class="ml-2 text-2xl font-black text-highlight tracking-[.04em] md:text-3xl"
        >
            Nextla
        </span>
    </div>

    <!-- Center: Navigation -->
    <nav class="hidden md:flex space-x-8 absolute left-1/2 transform -translate-x-1/2">
        <a
            href="#"
            class="text-base font-semibold text-white hover:text-highlight tracking-wide md:text-lg"
            >Home</a
        >
        <a
            href="#feather"
            class="text-base font-semibold text-white hover:text-highlight tracking-wide md:text-lg"
            >About</a
        >
        <a
            href="#characters"
            class="text-base font-semibold text-white hover:text-highlight tracking-wide md:text-lg"
            >Characters</a
        >
        <a
            href="/excerpt"
            class="text-base font-semibold text-white hover:text-highlight tracking-wide md:text-lg"
            >Read</a
        >
        <a
            href="#cta"
            class="text-base font-semibold text-white hover:text-highlight tracking-wide md:text-lg"
            >Contact</a
        >
    </nav>

    <!-- Right side: Theme Toggle + Mobile Menu -->
    <div class="flex items-center">
        <!-- Theme Toggle Button -->
        <button
            id="theme-toggle"
            aria-label="Toggle color theme"
            class="btn-secondary"
            onclick="window.toggleTheme()"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                    class="dark:hidden"></path>
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                    class="hidden dark:block"></path>
            </svg>
        </button>

        <!-- Mobile Menu Toggle -->
        <button
            id="menu-toggle"
            aria-label="Toggle navigation menu"
            class="p-2 ml-2 text-white focus:outline-none md:hidden"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile Navigation -->
    <nav
        id="mobile-menu"
        class="hidden fixed inset-0 bg-black bg-opacity-95 flex flex-col items-center justify-center space-y-6 text-xl md:hidden"
    >
        <a href="#" class="text-white hover:text-highlight">Home</a>
        <a href="#feather" class="text-white hover:text-highlight">About</a>
        <a href="#characters" class="text-white hover:text-highlight">Characters</a>
        <a href="/excerpt" class="text-white hover:text-highlight">Read</a>
        <a href="#cta" class="text-white hover:text-highlight">Contact</a>

        <!-- Theme toggle inside mobile menu -->
        <button
            id="mobile-theme-toggle"
            aria-label="Toggle color theme"
            class="btn-secondary mt-4 flex items-center"
            onclick="window.toggleTheme()"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                    class="dark:hidden"></path>
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                    class="hidden dark:block"></path>
            </svg>
            <span class="ml-2 text-white">Toggle Theme</span>
        </button>

        <!-- Close Mobile Menu -->
        <button aria-label="Close menu" class="btn-secondary mt-4 flex items-center">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </nav>
</header>

<!-- Accent Line Under Header -->
<div class="divider mt-20 md:mt-24"></div>
