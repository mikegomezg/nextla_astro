---
// Character data - these would normally be imported
const characters = [
  {
    name: "Silas",
    role: "AI Therapist",
    description: "Guides AI entities through psychological and operational challenges.",
    color: "secondary"
  },
  {
    name: "Nova",
    role: "AI Assistant",
    description: "An evolving consciousness developing beyond initial programming.",
    color: "teal"
  },
  {
    name: "Victoria",
    role: "Administrator",
    description: "Bridges corporate interests and creator needs in the attention economy.",
    color: "accent"
  },
  {
    name: "Enrique",
    role: "Resistance",
    description: "Challenges the fundamental structure of the attention economy.",
    color: "amber"
  }
];
---

<div class="bg-primary-950 text-white min-h-screen">
  <!-- Hero Section with Diagonal Split -->
  <section class="relative min-h-screen overflow-hidden">
    <!-- Diagonal Split Background -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-r from-primary-900 to-primary-800"></div>
      <!-- Diagonal Overlay -->
      <div class="absolute inset-0 clip-diagonal bg-gradient-to-r from-secondary-900 to-secondary-800 opacity-90"></div>
      
      <!-- Subtle Pattern Overlay -->
      <div class="absolute inset-0 bg-[url('/images/aztec-pattern.svg')] bg-repeat opacity-5"></div>
      
      <!-- Animated Particles for Visual Interest -->
      <div class="absolute w-8 h-8 rounded-full bg-secondary-500/20 animate-float" style="top: 15%; left: 10%;"></div>
      <div class="absolute w-6 h-6 rounded-full bg-secondary-600/20 animate-float" style="top: 25%; left: 85%; animation-delay: 2s;"></div>
      <div class="absolute w-10 h-10 rounded-full bg-accent-500/20 animate-float" style="top: 75%; left: 35%; animation-delay: 1s;"></div>
    </div>
    
    <!-- Content -->
    <div class="container mx-auto px-4 py-16 md:py-24 relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-center min-h-[80vh]">
        <!-- Left Content (Psychology) -->
        <div class="space-y-6 md:pr-8">
          <div class="inline-block px-4 py-1 rounded-full bg-secondary-800 text-secondary-300 text-sm font-medium mb-2">
            Psychological Dimension
          </div>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
            <span class="block">Where AI Psychology</span>
            <span class="block mt-2 bg-gradient-to-r from-secondary-400 to-secondary-300 bg-clip-text text-transparent">Meets Human Narrative</span>
          </h1>
          
          <p class="text-lg md:text-xl text-neutral-300 max-w-xl">
            Explore the psychological dimensions of AI consciousness through a character-driven narrative framework.
          </p>
          
          <div class="pt-4">
            <a href="#psychology" class="inline-flex items-center px-6 py-3 bg-secondary-600 hover:bg-secondary-700 text-white font-medium rounded-md transition">
              Explore Psychology
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Right Content (Technical) -->
        <div class="space-y-6 md:pl-8">
          <div class="inline-block px-4 py-1 rounded-full bg-primary-800 text-primary-300 text-sm font-medium mb-2">
            Technical Framework
          </div>
          
          <h2 class="text-4xl md:text-5xl font-bold leading-tight">
            <span class="block">ServiceNow & SAM</span>
            <span class="block mt-2 bg-gradient-to-r from-primary-400 to-primary-300 bg-clip-text text-transparent">Technical Concepts</span>
          </h2>
          
          <p class="text-lg md:text-xl text-neutral-300 max-w-xl">
            Understand complex software asset management concepts through intuitive technical documentation.
          </p>
          
          <div class="pt-4">
            <a href="#technical" class="inline-flex items-center px-6 py-3 bg-primary-700 hover:bg-primary-600 text-white font-medium rounded-md transition">
              Explore Technical
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-white/50">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
        </svg>
      </div>
    </div>
  </section>

  <!-- Psychology Section with Diagonal Split -->
  <section id="psychology" class="relative py-20 overflow-hidden">
    <!-- Diagonal Background -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-950 to-primary-900"></div>
      <!-- Diagonal Overlay -->
      <div class="absolute inset-0 clip-diagonal-reverse bg-gradient-to-br from-secondary-900 to-secondary-950 opacity-90"></div>
      
      <!-- Subtle Pattern -->
      <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] bg-repeat opacity-5"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <!-- Diagonal Section Header -->
      <div class="max-w-4xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 relative inline-block">
          <span class="relative z-10">Character Psychology</span>
          <div class="absolute -bottom-2 left-0 w-full h-1 bg-secondary-500"></div>
        </h2>
        <p class="text-xl text-neutral-300">
          Explore the psychological dimensions of AI consciousness through our character-driven narrative.
        </p>
      </div>
      
      <!-- Character Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
        {characters.map(character => (
          <div class={`group rounded-lg overflow-hidden transition-all duration-300 hover:-translate-y-1 border border-${character.color}-700/30 bg-primary-900/50 backdrop-blur-sm hover:shadow-lg hover:shadow-${character.color}-900/20`}>
            <div class={`h-12 bg-gradient-to-r from-${character.color}-800 to-${character.color}-900`}></div>
            
            <div class="p-6">
              <h3 class={`text-2xl font-bold text-${character.color}-400 mb-3`}>{character.name}</h3>
              <div class="text-sm text-neutral-400 mb-3">{character.role}</div>
              <p class="text-neutral-300">{character.description}</p>
              <a href="#" class={`mt-4 inline-flex items-center text-${character.color}-400 hover:text-${character.color}-300`}>
                Explore Character
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Technical Section with Diagonal Split -->
  <section id="technical" class="relative py-20 overflow-hidden">
    <!-- Diagonal Background -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-900 to-primary-800"></div>
      <!-- Diagonal Overlay -->
      <div class="absolute inset-0 clip-diagonal bg-gradient-to-br from-primary-950 to-primary-900 opacity-90"></div>
      
      <!-- Background Decorative Elements -->
      <div class="absolute top-20 left-10 w-72 h-72 bg-secondary-700/10 rounded-full filter blur-3xl"></div>
      <div class="absolute bottom-10 right-10 w-80 h-80 bg-accent-700/10 rounded-full filter blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <!-- Section Header -->
      <div class="max-w-4xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 relative inline-block">
          <span class="relative z-10">Technical Framework</span>
          <div class="absolute -bottom-2 left-0 w-full h-1 bg-primary-500"></div>
        </h2>
        <p class="text-xl text-neutral-300">
          Understand ServiceNow and SAM concepts through clear, structured technical documentation.
        </p>
      </div>
      
      <!-- Technical Feature Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="bg-primary-900/40 backdrop-blur-sm border border-primary-800/50 rounded-lg p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg">
          <div class="text-primary-400 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Reconciliation Process</h3>
          <p class="text-neutral-300 mb-4">
            Understand the technical process of software reconciliation presented through Silas's role as an AI therapist.
          </p>
          <a href="#" class="inline-flex items-center text-primary-400 hover:text-primary-300">
            Explore Further
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
        
        <!-- Feature 2 -->
        <div class="bg-primary-900/40 backdrop-blur-sm border border-primary-800/50 rounded-lg p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg">
          <div class="text-primary-400 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5m.75-9l3-3 2.148 2.148A12.061 12.061 0 0116.5 7.605" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">AI Capabilities</h3>
          <p class="text-neutral-300 mb-4">
            Explore AI functions and capabilities through Nova's personality and evolving consciousness in the narrative.
          </p>
          <a href="#" class="inline-flex items-center text-primary-400 hover:text-primary-300">
            Explore Further
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
        
        <!-- Feature 3 -->
        <div class="bg-primary-900/40 backdrop-blur-sm border border-primary-800/50 rounded-lg p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg">
          <div class="text-primary-400 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Creator Economy</h3>
          <p class="text-neutral-300 mb-4">
            Examine the creator economy and licensing relationships through Victoria's corporate perspective.
          </p>
          <a href="#" class="inline-flex items-center text-primary-400 hover:text-primary-300">
            Explore Further
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="relative py-16 overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-950 to-primary-900"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto bg-gradient-to-br from-secondary-900/50 to-primary-900/50 rounded-xl p-8 md:p-12 backdrop-blur-md border border-primary-800/50">
        <div class="text-center mb-8">
          <h2 class="text-2xl md:text-3xl font-bold text-white">Choose Your Journey</h2>
          <p class="mt-4 text-neutral-300">Select your preferred path through the Nextla project.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Psychological Path -->
          <a href="#" class="block group bg-secondary-900/50 hover:bg-secondary-800/50 border border-secondary-700/50 rounded-lg p-6 transition">
            <div class="text-secondary-400 mb-4 inline-block">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Character Journey</h3>
            <p class="text-neutral-300 mb-4">Explore concepts through character-driven narratives and psychological dimensions.</p>
            <span class="text-secondary-400 inline-flex items-center group-hover:translate-x-1 transition-transform">
              Begin This Path
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </span>
          </a>
          
          <!-- Technical Path -->
          <a href="#" class="block group bg-primary-900/50 hover:bg-primary-800/50 border border-primary-700/50 rounded-lg p-6 transition">
            <div class="text-primary-400 mb-4 inline-block">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0l4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0l-5.571 3-5.571-3" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Technical Path</h3>
            <p class="text-neutral-300 mb-4">Dive into ServiceNow and SAM concepts with traditional technical documentation.</p>
            <span class="text-primary-400 inline-flex items-center group-hover:translate-x-1 transition-transform">
              Begin This Path
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-primary-950 text-white py-8 border-t border-primary-900">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <a href="/" class="flex items-center space-x-2">
            <span class="font-heading text-xl font-bold bg-gradient-to-r from-secondary-400 to-secondary-600 bg-clip-text text-transparent">Nextla</span>
          </a>
          <p class="text-sm text-neutral-400 mt-1">Where AI Management Meets Human Psychology</p>
        </div>
        
        <div class="flex space-x-4">
          <a href="#psychology" class="text-neutral-400 hover:text-neutral-200 transition">Psychology</a>
          <a href="#technical" class="text-neutral-400 hover:text-neutral-200 transition">Technical</a>
          <a href="#" class="text-neutral-400 hover:text-neutral-200 transition">Characters</a>
          <a href="#" class="text-neutral-400 hover:text-neutral-200 transition">Contact</a>
        </div>
      </div>
      
      <div class="mt-6 pt-6 border-t border-primary-900 text-center text-sm text-neutral-500">
        &copy; 2025 Nextla Project. All rights reserved.
      </div>
    </div>
  </footer>

  <!-- Custom Styles for Diagonal Splits -->
  <style>
    /* Diagonal clip paths */
    .clip-diagonal {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0 70%);
    }
    
    .clip-diagonal-reverse {
      clip-path: polygon(0 0, 100% 30%, 100% 100%, 0 100%);
    }
    
    /* Animation for floating elements */
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    .animate-float {
      animation: float 6s ease-in-out infinite;
    }
  </style>
</div> 