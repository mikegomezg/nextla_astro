  <!-- Parallax Effect Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize parallax effects
      const parallaxBg = document.querySelectorAll('.parallax-bg');
      const parallaxItems = document.querySelectorAll('.parallax-item');
      const parallaxContent = document.querySelectorAll('.parallax-content');
      const parallaxLayer = document.querySelectorAll('.parallax-layer');
      
      // Function to update element position based on scroll
      function updateParallaxPosition() {
        const scrollY = window.scrollY;
        
        // Update background parallax elements
        parallaxBg.forEach(element => {
          const depth = element.getAttribute('data-depth') || 0.2;
          const movement = -(scrollY * depth);
          element.style.transform = `translateY(${movement}px)`;
        });
        
        // Update content parallax elements
        parallaxContent.forEach(element => {
          const depth = element.getAttribute('data-depth') || 0.2;
          const movement = -(scrollY * depth);
          element.style.transform = `translateY(${movement}px)`;
        });
        
        // Update item parallax elements (more complex movement)
        parallaxItems.forEach(element => {
          const rect = element.getBoundingClientRect();
          const elementY = rect.top + scrollY;
          const depth = element.getAttribute('data-depth') || 0.2;
          const inViewY = scrollY - elementY;
          const movement = -(inViewY * depth);
          
          // Only apply parallax if element is near viewport
          if (Math.abs(rect.top) < window.innerHeight * 1.5) {
            element.style.transform = `translateY(${movement}px)`;
          }
        });
        
        // Update mouse-move related layers (initial position)
        parallaxLayer.forEach(element => {
          const depth = element.getAttribute('data-depth') || 0.2;
          const movement = -(scrollY * depth * 0.5);
          element.style.transform = `translateY(${movement}px)`;
        });
      }
      
      // Function to handle mouse movement for parallax
      function handleMouseMove(e) {
        const mouseX = e.clientX;
        const mouseY = e.clientY;
        
        // Get window dimensions
        const windowWidth = window.innerWidth;
        const windowHeight = window.innerHeight;
        
        // Calculate mouse position as percentage of window
        const mouseXPercent = mouseX / windowWidth - 0.5;
        const mouseYPercent = mouseY / windowHeight - 0.5;
        
        // Update layer positions based on mouse movement
        parallaxLayer.forEach(element => {
          const depth = element.getAttribute('data-depth') || 0.2;
          const moveX = mouseXPercent * depth * 40;
          const moveY = mouseYPercent * depth * 40;
          
          element.style.transform = `translate(${moveX}px, ${moveY}px)`;
        });
      }
      
      // Add event listeners
      window.addEventListener('scroll', updateParallaxPosition);
      window.addEventListener('resize', updateParallaxPosition);
      window.addEventListener('mousemove', handleMouseMove);
      
      // Initialize positions
      updateParallaxPosition();
    });
  </script>
