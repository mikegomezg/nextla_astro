---
---

<div class="relative bg-primary-950 text-white min-h-screen overflow-hidden">
  <!-- Immersive Background Effect -->
  <div class="fixed inset-0 z-0">
    <!-- Animated Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-950 via-primary-900 to-primary-800 opacity-90"></div>
    
    <!-- Dynamic Background Pattern -->
    <div class="absolute inset-0 bg-[url('/images/aztec-pattern.svg')] bg-repeat opacity-10"></div>
    
    <!-- Animated Particles -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute w-8 h-8 rounded-full bg-secondary-500/20 animate-float" style="top: 15%; left: 10%; animation-duration: -10s"></div>
      <div class="absolute w-12 h-12 rounded-full bg-secondary-400/20 animate-float" style="top: 25%; left: 85%; animation-duration: 15s"></div>
      <div class="absolute w-6 h-6 rounded-full bg-accent-500/20 animate-float" style="top: 85%; left: 25%; animation-duration: 18s"></div>
      <div class="absolute w-16 h-16 rounded-full bg-accent-400/20 animate-float" style="top: 40%; left: 60%; animation-duration: 12s"></div>
      <div class="absolute w-10 h-10 rounded-full bg-teal-500/20 animate-float" style="top: 70%; left: 80%; animation-duration: 20s"></div>
    </div>
  </div>

  <!-- Futuristic Navigation with Glassmorphism -->
  <header class="sticky top-0 z-50 backdrop-blur-md bg-primary-900/30 border-b border-primary-800/50">
    <div class="container mx-auto px-4 py-3">
      <div class="flex justify-between items-center">
        <!-- Logo -->
        <a href="#" class="text-2xl font-bold bg-gradient-to-r from-secondary-400 to-secondary-600 bg-clip-text text-transparent">
          NEXTLA
        </a>
        
        <!-- Navigation Pills -->
        <nav class="hidden md:flex space-x-1">
          <a href="#experience" class="px-4 py-2 rounded-full bg-primary-800/50 hover:bg-primary-700/50 transition">Experience</a>
          <a href="#characters" class="px-4 py-2 rounded-full bg-primary-800/50 hover:bg-primary-700/50 transition">Characters</a>
          <a href="#integration" class="px-4 py-2 rounded-full bg-primary-800/50 hover:bg-primary-700/50 transition">Integration</a>
          <a href="#journey" class="px-4 py-2 bg-secondary-600 hover:bg-secondary-700 rounded-full transition">Begin Journey</a>
        </nav>
        
        <!-- Mobile Menu Button -->
        <button class="md:hidden text-white">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </div>
  </header>

  <!-- Immersive Hero Section -->
  <section class="relative min-h-screen flex items-center">
    <div class="container mx-auto px-4 py-24 relative z-10">
      <div class="max-w-4xl mx-auto">
        <!-- Futuristic Typography -->
        <div class="text-center mb-8">
          <h1 class="text-5xl md:text-7xl font-bold mb-4 leading-tight">
            <span class="block transform hover:scale-105 transition-transform duration-300">
              The Full <span class="bg-gradient-to-r from-secondary-400 via-secondary-500 to-accent-400 bg-clip-text text-transparent">Immersive</span>
            </span>
            <span class="block transform hover:scale-105 transition-transform duration-500 delay-100">
              Experience
            </span>
          </h1>
          
          <p class="text-xl md:text-2xl text-neutral-300 mt-6 mb-10 max-w-3xl mx-auto leading-relaxed">
            Dive into the complete Nextla ecosystem where AI management and human psychology converge in a truly immersive narrative journey.
          </p>
        </div>
        
        <!-- 3D-Style Animated Button -->
        <div class="flex justify-center">
          <a href="#experience" class="group relative inline-flex items-center overflow-hidden rounded-lg bg-gradient-to-r from-secondary-600 to-accent-600 px-8 py-4 text-white shadow-lg transition-all duration-300 hover:shadow-secondary-500/25 hover:from-secondary-500 hover:to-accent-500">
            <span class="relative z-10 font-medium text-lg group-hover:text-white transition-colors flex items-center">
              Begin Immersive Journey
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
              </svg>
            </span>
          </a>
        </div>

        <!-- Futuristic Scroll Indicator -->
        <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-secondary-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Immersive Experience Section -->
  <section id="experience" class="relative py-20">
    <!-- 3D-Style Section Separator -->
    <div class="absolute top-0 left-0 right-0 h-20 bg-gradient-to-b from-primary-950 to-transparent"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-5xl mx-auto">
        <!-- Futuristic Section Title -->
        <div class="text-center mb-16">
          <h2 class="inline-block text-4xl font-bold relative mb-6">
            <span class="bg-gradient-to-r from-secondary-400 to-secondary-600 bg-clip-text text-transparent">
              Immersive Experience
            </span>
            <div class="absolute -bottom-2 left-0 w-full h-1 bg-gradient-to-r from-secondary-500 to-secondary-700"></div>
          </h2>
          <p class="text-xl text-neutral-300 max-w-3xl mx-auto">
            Explore the Nextla universe through multi-sensory narrative elements.
          </p>
        </div>
        
        <!-- Immersive Feature Blocks -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Feature 1: Interactive Storytelling -->
          <div class="rounded-xl overflow-hidden group cursor-pointer transition-all duration-300 hover:shadow-xl hover:shadow-secondary-900/20 backdrop-blur-sm bg-primary-900/30 border border-primary-800/50">
            <div class="h-48 bg-gradient-to-br from-secondary-900 to-primary-950 relative overflow-hidden">
              <!-- Decorative Visual Element -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-32 h-32 rounded-full bg-secondary-500/20 group-hover:scale-110 transition-all duration-700"></div>
                <div class="absolute w-24 h-24 rounded-full bg-secondary-600/20 group-hover:scale-125 transition-all duration-1000 delay-100"></div>
                <div class="absolute w-16 h-16 rounded-full bg-secondary-700/20 group-hover:scale-150 transition-all duration-1200 delay-200"></div>
              </div>
              
              <!-- Icon -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-secondary-400 z-10">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
                  </svg>
                </div>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-secondary-400 transition-colors">Interactive Storytelling</h3>
              <p class="text-neutral-300 group-hover:text-neutral-200 transition-colors">
                Experience a narrative that responds to your choices, with branching paths that reveal different aspects of AI consciousness.
              </p>
            </div>
          </div>
          
          <!-- Feature 2: Dimensional Characters -->
          <div class="rounded-xl overflow-hidden group cursor-pointer transition-all duration-300 hover:shadow-xl hover:shadow-accent-900/20 backdrop-blur-sm bg-primary-900/30 border border-primary-800/50">
            <div class="h-48 bg-gradient-to-br from-accent-900 to-primary-950 relative overflow-hidden">
              <!-- Decorative Visual Element -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-32 h-32 rounded-full bg-accent-500/20 group-hover:scale-110 transition-all duration-700"></div>
                <div class="absolute w-24 h-24 rounded-full bg-accent-600/20 group-hover:scale-125 transition-all duration-1000 delay-100"></div>
                <div class="absolute w-16 h-16 rounded-full bg-accent-700/20 group-hover:scale-150 transition-all duration-1200 delay-200"></div>
              </div>
              
              <!-- Icon -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-accent-400 z-10">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                  </svg>
                </div>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-accent-400 transition-colors">Dimensional Characters</h3>
              <p class="text-neutral-300 group-hover:text-neutral-200 transition-colors">
                Explore fully realized character perspectives through immersive dialogue and psychological exploration.
              </p>
            </div>
          </div>
          
          <!-- Feature 3: Sensory Integration -->
          <div class="rounded-xl overflow-hidden group cursor-pointer transition-all duration-300 hover:shadow-xl hover:shadow-teal-900/20 backdrop-blur-sm bg-primary-900/30 border border-primary-800/50">
            <div class="h-48 bg-gradient-to-br from-teal-900 to-primary-950 relative overflow-hidden">
              <!-- Decorative Visual Element -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-32 h-32 rounded-full bg-teal-500/20 group-hover:scale-110 transition-all duration-700"></div>
                <div class="absolute w-24 h-24 rounded-full bg-teal-600/20 group-hover:scale-125 transition-all duration-1000 delay-100"></div>
                <div class="absolute w-16 h-16 rounded-full bg-teal-700/20 group-hover:scale-150 transition-all duration-1200 delay-200"></div>
              </div>
              
              <!-- Icon -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-teal-400 z-10">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23-.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5" />
                  </svg>
                </div>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-teal-400 transition-colors">Sensory Integration</h3>
              <p class="text-neutral-300 group-hover:text-neutral-200 transition-colors">
                Experience visual and auditory elements that enhance the narrative journey through AI consciousness.
              </p>
            </div>
          </div>
          
          <!-- Feature 4: Technical Depth -->
          <div class="rounded-xl overflow-hidden group cursor-pointer transition-all duration-300 hover:shadow-xl hover:shadow-amber-900/20 backdrop-blur-sm bg-primary-900/30 border border-primary-800/50">
            <div class="h-48 bg-gradient-to-br from-amber-900 to-primary-950 relative overflow-hidden">
              <!-- Decorative Visual Element -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-32 h-32 rounded-full bg-amber-500/20 group-hover:scale-110 transition-all duration-700"></div>
                <div class="absolute w-24 h-24 rounded-full bg-amber-600/20 group-hover:scale-125 transition-all duration-1000 delay-100"></div>
                <div class="absolute w-16 h-16 rounded-full bg-amber-700/20 group-hover:scale-150 transition-all duration-1200 delay-200"></div>
              </div>
              
              <!-- Icon -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-amber-400 z-10">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
                  </svg>
                </div>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-amber-400 transition-colors">Technical Depth</h3>
              <p class="text-neutral-300 group-hover:text-neutral-200 transition-colors">
                Dive deeper into ServiceNow and SAM concepts through layered technical explanations that complement the narrative.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Journey Section -->
  <section id="journey" class="relative py-20 overflow-hidden">
    <!-- Background Effect -->
    <div class="absolute inset-0 backdrop-blur-3xl">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-secondary-600/10 rounded-full"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent-600/10 rounded-full"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto bg-primary-900/50 backdrop-blur-md rounded-2xl p-8 md:p-12 border border-primary-800/50 shadow-2xl">
        <div class="text-center mb-10">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Begin Your Journey</h2>
          <p class="text-xl text-neutral-300">
            Choose your path through the immersive Nextla experience.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Path 1 -->
          <a href="#" class="group block bg-gradient-to-br from-secondary-900/50 to-primary-900/80 p-6 rounded-xl border border-secondary-800/50 backdrop-blur-sm transition-all duration-300 hover:shadow-lg hover:shadow-secondary-700/20 hover:-translate-y-1">
            <div class="text-secondary-400 mb-4 inline-block p-3 rounded-full bg-secondary-900/50">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
              </svg>
            </div>
            
            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-secondary-400 transition-colors">
              Character-Driven Experience
            </h3>
            
            <p class="text-neutral-300 mb-4 group-hover:text-neutral-200 transition-colors">
              Experience ServiceNow and SAM concepts through rich character narratives and psychological exploration.
            </p>
            
            <span class="text-secondary-400 inline-flex items-center group-hover:translate-x-1 transition-transform">
              Begin This Path
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </span>
          </a>
          
          <!-- Path 2 -->
          <a href="#" class="group block bg-gradient-to-br from-accent-900/50 to-primary-900/80 p-6 rounded-xl border border-accent-800/50 backdrop-blur-sm transition-all duration-300 hover:shadow-lg hover:shadow-accent-700/20 hover:-translate-y-1">
            <div class="text-accent-400 mb-4 inline-block p-3 rounded-full bg-accent-900/50">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
              </svg>
            </div>
            
            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-accent-400 transition-colors">
              Technical Immersion
            </h3>
            
            <p class="text-neutral-300 mb-4 group-hover:text-neutral-200 transition-colors">
              Dive deep into technical concepts with immersive visual explanations and interactive system demonstrations.
            </p>
            
            <span class="text-accent-400 inline-flex items-center group-hover:translate-x-1 transition-transform">
              Begin This Path
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Immersive Footer -->
  <footer class="relative py-16 overflow-hidden">
    <!-- Background Effect -->
    <div class="absolute inset-0 bg-gradient-to-t from-primary-950 to-transparent"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-5xl mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-center mb-12">
          <!-- Logo -->
          <div class="mb-6 md:mb-0">
            <div class="text-2xl font-bold bg-gradient-to-r from-secondary-400 to-secondary-600 bg-clip-text text-transparent">
              NEXTLA
            </div>
            <p class="text-neutral-400 mt-1">Where AI Management Meets Human Psychology</p>
          </div>
          
          <!-- Footer Links - Glassmorphism Pills -->
          <div class="flex flex-wrap justify-center gap-4">
            <a href="#" class="px-4 py-2 rounded-full bg-primary-800/50 hover:bg-primary-700/50 text-neutral-300 hover:text-white transition">
              About
            </a>
            <a href="#" class="px-4 py-2 rounded-full bg-primary-800/50 hover:bg-primary-700/50 text-neutral-300 hover:text-white transition">
              Characters
            </a>
            <a href="#" class="px-4 py-2 rounded-full bg-primary-800/50 hover:bg-primary-700/50 text-neutral-300 hover:text-white transition">
              Technical
            </a>
            <a href="#" class="px-4 py-2 rounded-full bg-primary-800/50 hover:bg-primary-700/50 text-neutral-300 hover:text-white transition">
              Contact
            </a>
          </div>
        </div>
        
        <!-- Copyright -->
        <div class="text-center text-neutral-500 pt-8 border-t border-primary-800/50">
          &copy; 2025 Nextla Project. All rights reserved.
        </div>
      </div>
    </div>
  </footer>

  <!-- Custom Styles for Animations -->
  <style>
    @keyframes float {
      0%, 100% { transform: translate(0, 0); }
      25% { transform: translate(10px, -15px); }
      50% { transform: translate(20px, 0); }
      75% { transform: translate(10px, 15px); }
    }
    
    .animate-float {
      animation: float 20s ease-in-out infinite;
    }
  </style>
</div> 