---

<div class="bg-primary-950 text-white min-h-screen">
  <!-- Hero Section with Cards Layout -->
  <section class="relative min-h-screen pt-24 pb-20 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-primary-950 via-primary-900 to-primary-950"></div>
      
      <!-- Animated Grid Pattern -->
      <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] bg-repeat opacity-5"></div>
      
      <!-- Background Glow Effects -->
      <div class="absolute top-10 right-[10%] w-80 h-80 bg-secondary-600/10 rounded-full filter blur-[100px]"></div>
      <div class="absolute bottom-10 left-[5%] w-96 h-96 bg-accent-600/10 rounded-full filter blur-[100px]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <!-- Main Hero Content -->
      <div class="text-center max-w-4xl mx-auto mb-16">
        <h1 class="text-5xl md:text-6xl font-bold leading-tight mb-6">
          <span class="block">Nextla Project</span>
          <span class="bg-gradient-to-r from-primary-400 to-secondary-400 bg-clip-text text-transparent">Interactive Experience</span>
        </h1>
        <p class="text-xl text-neutral-300 mb-8 max-w-3xl mx-auto">
          Explore the intersection of AI psychology and technical documentation through an interactive card-based experience.
        </p>
        
        <!-- Feature Pills -->
        <div class="flex flex-wrap justify-center gap-2 mb-10">
          <span class="px-4 py-1.5 bg-primary-800/50 text-primary-300 rounded-full text-sm">Character Driven</span>
          <span class="px-4 py-1.5 bg-secondary-800/50 text-secondary-300 rounded-full text-sm">Psychology</span>
          <span class="px-4 py-1.5 bg-accent-800/50 text-accent-300 rounded-full text-sm">Technical</span>
          <span class="px-4 py-1.5 bg-teal-800/50 text-teal-300 rounded-full text-sm">Interactive</span>
        </div>
        
        <div class="flex justify-center">
          <a href="#features" class="px-6 py-3 bg-primary-700 hover:bg-primary-600 rounded-md text-white font-medium transition shadow-lg hover:shadow-primary-700/30">
            Explore Features
          </a>
        </div>
      </div>
    </section>
    
    <!-- Interactive Card Grid Section -->
    <section id="features" class="relative py-20">
      <!-- Background -->
      <div class="absolute inset-0 bg-gradient-to-b from-primary-950 via-primary-900 to-primary-900"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <!-- Section Header -->
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Interactive Features</h2>
          <p class="text-lg text-neutral-300">
            Explore the key aspects of the Nextla project through our interactive card grid.
            Click on any card to reveal more information.
          </p>
        </div>
        
        <!-- Feature Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-20">
          {features.map((feature, index) => (
            <div class={`feature-card group relative bg-primary-900/60 backdrop-blur-sm border border-${feature.color}-700/30 rounded-xl overflow-hidden transition-all duration-300 hover:shadow-xl hover:shadow-${feature.color}-900/20 cursor-pointer`} data-card-id={index}>
              <!-- Card Header -->
              <div class={`h-2 bg-gradient-to-r from-${feature.color}-700 to-${feature.color}-500`}></div>
              
              <!-- Card Content -->
              <div class="p-6 md:p-8">
                <div class={`inline-flex items-center justify-center w-14 h-14 rounded-xl mb-6 bg-${feature.color}-900/50 text-${feature.color}-400 border border-${feature.color}-700/30`}>
                  {feature.icon === "brain" && (
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                    </svg>
                  )}
                  {feature.icon === "user-group" && (
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                    </svg>
                  )}
                  {feature.icon === "document-text" && (
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                    </svg>
                  )}
                  {feature.icon === "cpu-chip" && (
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 002.25-2.25V6.75a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 6.75v10.5a2.25 2.25 0 002.25 2.25zm.75-12h9v9h-9v-9z" />
                    </svg>
                  )}
                  {feature.icon === "currency-dollar" && (
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {feature.icon === "clipboard-document-list" && (
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
                    </svg>
                  )}
                </div>
                
                <h3 class={`text-2xl font-bold text-${feature.color}-400 mb-3`}>{feature.title}</h3>
                <p class="text-neutral-300">{feature.description}</p>
                
                <!-- Hover Indicator -->
                <div class="mt-6 flex items-center text-sm text-neutral-400 group-hover:text-neutral-300 transition-colors">
                  <span>Click to explore</span>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                  </svg>
                </div>
                
                <!-- Card Reveal Content (Hidden by Default) -->
                <div class="card-reveal absolute inset-0 bg-gradient-to-b from-primary-950 to-primary-900 p-6 opacity-0 invisible transition-all duration-300 flex flex-col justify-between">
                  <div>
                    <div class="flex justify-between items-center mb-4">
                      <h3 class={`text-2xl font-bold text-${feature.color}-400`}>{feature.title}</h3>
                      <button class="card-close text-neutral-400 hover:text-white p-1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </button>
                    </div>
                    
                    <p class="text-neutral-300 mb-4">
                      {feature.description}
                    </p>
                    
                    <p class="text-neutral-400 mb-4">
                      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla facilisi. 
                      In hac habitasse platea dictumst. Vivamus in turpis eu elit elementum bibendum.
                    </p>
                    
                    <ul class="space-y-2 text-neutral-300">
                      <li class="flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class={`w-5 h-5 mr-2 text-${feature.color}-500 shrink-0 mt-0.5`}>
                          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>Key point 1 about this feature or concept</span>
                      </li>
                      <li class="flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class={`w-5 h-5 mr-2 text-${feature.color}-500 shrink-0 mt-0.5`}>
                          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>Key point 2 about this feature or concept</span>
                      </li>
                      <li class="flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class={`w-5 h-5 mr-2 text-${feature.color}-500 shrink-0 mt-0.5`}>
                          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>Key point 3 about this feature or concept</span>
                      </li>
                    </ul>
                  </div>
                  
                  <a href="#" class={`self-start mt-4 px-4 py-2 bg-${feature.color}-700/60 hover:bg-${feature.color}-700/80 rounded-md text-white text-sm font-medium flex items-center transition`}>
                    Learn More
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  
  <!-- Character Showcase Section -->
  <section id="characters" class="relative py-20 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-gradient-to-b from-primary-900 to-primary-950"></div>
    <div class="absolute top-0 w-full h-px bg-gradient-to-r from-transparent via-primary-700/50 to-transparent"></div>
    <div class="absolute bottom-0 w-full h-px bg-gradient-to-r from-transparent via-primary-700/50 to-transparent"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <!-- Section Header -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Meet the Characters</h2>
        <p class="text-lg text-neutral-300">
          Explore the diverse personalities that drive the narrative and embody the technical concepts.
        </p>
      </div>
      
      <!-- Character Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
        {characters.map((character, index) => (
          <div class={`character-card group relative overflow-hidden rounded-xl border border-${character.color}-700/30 bg-gradient-to-b from-primary-900/80 to-primary-950/80 backdrop-blur-sm hover:shadow-lg hover:shadow-${character.color}-900/20 transition-all duration-300`}>
            <!-- Character Image Overlay -->
            <div class="relative h-56 overflow-hidden">
              <div class={`absolute inset-0 bg-gradient-to-b from-${character.color}-900/20 to-${character.color}-900/60 z-10`}></div>
              <img 
                src={character.image} 
                alt={character.name} 
                class="w-full h-full object-cover object-center transition-transform duration-500 group-hover:scale-105"
              />
            </div>
            
            <!-- Character Info -->
            <div class="p-6">
              <h3 class={`text-2xl font-bold text-${character.color}-400 mb-1`}>{character.name}</h3>
              <div class="text-sm text-neutral-400 mb-3">{character.role}</div>
              <p class="text-neutral-300 mb-4">{character.description}</p>
              
              <a href="#" class={`inline-flex items-center text-${character.color}-400 hover:text-${character.color}-300 text-sm group-hover:translate-x-1 transition-transform`}>
                Character Details
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="relative py-20">
    <div class="absolute inset-0 bg-gradient-to-b from-primary-950 to-primary-900"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Start Your Journey</h2>
        <p class="text-xl text-neutral-300 mb-8 max-w-3xl mx-auto">
          Ready to dive deeper into the world of Nextla? Choose your path and begin exploring.
        </p>
        
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="#" class="px-6 py-3 bg-primary-700 hover:bg-primary-600 rounded-md text-white font-medium transition w-full sm:w-auto text-center">
            Technical Documentation
          </a>
          <a href="#" class="px-6 py-3 bg-secondary-700 hover:bg-secondary-600 rounded-md text-white font-medium transition w-full sm:w-auto text-center">
            Character Stories
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-primary-950 text-white py-8 border-t border-primary-900">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-6 md:mb-0">
          <a href="/" class="flex items-center space-x-2">
            <span class="font-heading text-xl font-bold bg-gradient-to-r from-secondary-400 to-primary-400 bg-clip-text text-transparent">Nextla</span>
          </a>
          <p class="text-sm text-neutral-400 mt-1">Where AI Management Meets Human Psychology</p>
        </div>
        
        <div class="flex flex-wrap justify-center gap-4 md:gap-6">
          <a href="#features" class="text-neutral-400 hover:text-neutral-200 transition">Features</a>
          <a href="#characters" class="text-neutral-400 hover:text-neutral-200 transition">Characters</a>
          <a href="#" class="text-neutral-400 hover:text-neutral-200 transition">Documentation</a>
          <a href="#" class="text-neutral-400 hover:text-neutral-200 transition">Contact</a>
        </div>
      </div>
      
      <div class="mt-6 pt-6 border-t border-primary-900 text-center text-sm text-neutral-500">
        &copy; 2025 Nextla Project. All rights reserved.
      </div>
    </div>
  </footer>

  <!-- Interactive Card JS -->
  <script>
    // Wait for DOM to be fully loaded
    document.addEventListener('DOMContentLoaded', () => {
      // Get all feature cards
      const featureCards = document.querySelectorAll('.feature-card');
      
      // Add click event to each card
      featureCards.forEach(card => {
        // Find the reveal content and close button for this card
        const revealContent = card.querySelector('.card-reveal');
        const closeButton = card.querySelector('.card-close');
        
        // Open card on click
        card.addEventListener('click', (e) => {
          // Don't trigger if close button was clicked
          if (e.target.closest('.card-close')) return;
          
          // Show content
          revealContent.classList.remove('opacity-0', 'invisible');
          revealContent.classList.add('opacity-100', 'visible');
        });
        
        // Close card when close button is clicked
        closeButton?.addEventListener('click', (e) => {
          e.stopPropagation(); // Prevent card click from triggering
          
          // Hide content
          revealContent.classList.remove('opacity-100', 'visible');
          revealContent.classList.add('opacity-0', 'invisible');
        });
      });
    });
  </script>
</div> 