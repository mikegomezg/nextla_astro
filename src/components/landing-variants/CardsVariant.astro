---
// Features data
const features = [
  {
    title: "AI Consciousness",
    description: "Exploring the psychological framework of artificial intelligence and synthetic consciousness.",
    icon: "brain",
    color: "teal"
  },
  {
    title: "Character Development",
    description: "Deep character-driven narratives that bring technical concepts to life.",
    icon: "user-group",
    color: "secondary"
  },
  {
    title: "Technical Documentation",
    description: "Clear explanations of ServiceNow, SAM and complex system integrations.",
    icon: "document-text",
    color: "primary"
  },
  {
    title: "Software Reconciliation",
    description: "Understanding the complex processes of software asset reconciliation.",
    icon: "cpu-chip",
    color: "accent"
  },
  {
    title: "Creator Economy",
    description: "Exploring the economics and ethics of AI in content creation.",
    icon: "currency-dollar", 
    color: "amber"
  },
  {
    title: "Asset Management",
    description: "Comprehensive approaches to managing software assets and licenses.",
    icon: "clipboard-document-list",
    color: "indigo"
  }
];

// Character data
const characters = [
  {
    name: "Silas",
    role: "AI Therapist",
    description: "Guides AI entities through psychological and operational challenges.",
    color: "secondary",
    image: "/images/placeholder-character.png"
  },
  {
    name: "Nova",
    role: "AI Assistant",
    description: "An evolving consciousness developing beyond initial programming.",
    color: "teal",
    image: "/images/placeholder-character.png"
  },
  {
    name: "Victoria",
    role: "Administrator",
    description: "Bridges corporate interests and creator needs in the attention economy.",
    color: "accent",
    image: "/images/placeholder-character.png"
  },
  {
    name: "Enrique",
    role: "Resistance",
    description: "Challenges the fundamental structure of the attention economy.",
    color: "amber",
    image: "/images/placeholder-character.png"
  }
