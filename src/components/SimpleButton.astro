---
const { text, href } = Astro.props;
---

<a href={href} class="button-pulse px-8 py-4 bg-jade text-white rounded flex items-center justify-center font-medium hover:bg-jade-dark transition-colors duration-300">
  {text}
  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
    <path fill-rule="evenodd" d="M16.707 10.293a1 1 0 010 1.414l-6 6a1 1 0 01-1.414 0l-6-6a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l4.293-4.293a1 1 0 011.414 0z" clip-rule="evenodd" />
  </svg>
</a>

<style>
  .button-pulse {
    box-shadow: 0 0 0 0 rgba(var(--jade-rgb), 0.7);
    animation: pulse 2s infinite cubic-bezier(0.66, 0, 0, 1);
  }
  
  @keyframes pulse {
    to {
      box-shadow: 0 0 0 15px rgba(var(--jade-rgb), 0);
    }
  }
</style> 