---
import { getEntry } from "astro:content";

const ctaContent = await getEntry("landing", "cta");
const { title, description } = ctaContent?.data || {};
---

<section
    id="cta"
    aria-labelledby="cta-heading"
    class="py-12 md:py-20 px-4 bg-gradient-to-b from-background to-primary/20 text-foreground"
>
    <div class="max-w-4xl mx-auto text-center">
        <h2
            id="cta-heading"
            class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 md:mb-6 text-highlight"
        >
            {title || "Join the Attention Revolution"}
        </h2>
        <p
            class="text-sm md:text-base lg:text-lg mb-8 md:mb-10 opacity-90 max-w-2xl mx-auto"
        >
            {
                description ||
                    "Be part of the platform that reimagines how creative attention works in the AI era."
            }
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input
                type="email"
                placeholder="Your email address"
                class="flex-grow py-3 px-4 rounded-lg bg-background border border-primary border-opacity-40 placeholder-foreground/50 focus:outline-none focus:ring-2 focus:ring-primary text-sm md:text-base"
                aria-label="Email address"
            />
            <button
                type="submit"
                class="bg-primary text-background hover:bg-opacity-80 font-bold py-3 px-6 rounded-lg transition-colors text-sm md:text-base"
            >
                Get Started
            </button>
        </form>
    </div>
</section>
