---
import { getEntry } from "astro:content";

const ctaContent = await getEntry("landing", "cta");

if (!ctaContent) {
  throw new Error(
    "CTA content not found: cta entry missing from landing collection",
  );
}

const { cta } = ctaContent.data;
---

<section
  id="cta"
  class="py-16 px-6
        text-center
        bg-gradient-to-br from-featherbg via-primaryDark/40 to-accent/20"
>
  <div class="max-w-4xl
        mx-auto">
    <h2
      class="mb-6
            text-2xl font-bold text-highlight
            md:text-3xl"
    >
      Ready to Begin?
    </h2>
    <p class="max-w-2xl
            mb-8 mx-auto
            text-text text-lg">
      Explore the detailed story of Nextla and meet all the characters.
    </p>
    <a
      href="#"
      class="inline-block
                px-8 py-3
                text-text text-lg font-semibold
                bg-accent
                rounded-lg
                transition-colors shadow-md
                hover:bg-accentDark hover:shadow-lg"
    >
      {cta || "Read the Full Excerpt"}
    </a>
  </div>
</section>
