---
import { getEntry } from "astro:content";

const ctaContent = await getEntry("landing", "cta");

if (!ctaContent) {
    throw new Error("CTA content not found: cta entry missing from landing collection");
}

const { cta } = ctaContent.data;
---

<section
    id="cta"
    class="pb-16 px-4
        text-center container-xl
        bg-gradient-to-br from-featherbg via-primaryDark/40 to-accent/20"
>
    <div>
        <h2 class="mb-6 heading-responsive text-highlight select-none">Learn More</h2>

        <div
            class="flex flex-col md:flex-row md:flex-wrap items-center justify-center space-y-4 md:space-y-0 md:space-x-4 select-none"
        >
            <a class="btn-primary w-full max-w-[250px]"> Read a Scene</a>
            <a class="btn-secondary w-full max-w-[250px]"> Reach Out </a>
        </div>
    </div>
        <!-- Subtle copyright -->
    <div class="mt-8 text-center text-s text-text/60 select-none">
        Â© 2025 Michael Gomez
    </div>
</section>
