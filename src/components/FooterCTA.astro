---
import { getEntry } from "astro:content";

const ctaContent = await getEntry("landing", "cta");

if (!ctaContent) {
    throw new Error("CTA content not found: cta entry missing from landing collection");
}

const { cta } = ctaContent.data;
---

<section
    id="cta"
    class="py-16 px-6 bg-gradient-to-br from-secondary/5 to-primary/10 text-center"
>
    <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-6 text-secondary">
            Ready to Begin?
        </h2>
        <p class="text-foreground text-lg mb-8 max-w-2xl mx-auto">
            Explore the detailed story of Nexla and meet all the characters.
        </p>
        <a
            href="#"
            class="inline-block px-8 py-3 bg-accent hover:bg-opacity-90 text-background rounded-lg text-lg font-semibold transition-colors shadow-md hover:shadow-lg"
        >
            {cta || "Read the Full Excerpt"}
        </a>
    </div>
</section>
