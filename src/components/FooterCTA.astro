---
import { getEntry } from "astro:content";
const ctaContent = await getEntry("landing", "cta");
const { cta } = ctaContent.data;
---

<section class="py-16 bg-secondary bg-opacity-10 text-center px-4">
    <div class="max-w-3xl mx-auto">
        <a
            href="#"
            class="inline-block px-8 py-3 bg-accent text-background rounded-md text-lg font-medium hover:bg-opacity-90 transition-colors"
        >
            {cta}
        </a>
    </div>
</section>

