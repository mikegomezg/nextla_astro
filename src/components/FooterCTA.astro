---
import { getEntry } from "astro:content";

const ctaContent = await getEntry("landing", "cta");

if (!ctaContent) {
    throw new Error("CTA content not found: cta entry missing from landing collection");
}

const { cta } = ctaContent.data;
---

<section
    id="cta"
    class="pb-16 px-4
        text-center container-xl
        bg-gradient-to-br from-featherbg via-primaryDark/40 to-accent/20"
>
    <div>
        <h2 class="mb-6 heading-responsive text-highlight select-none">Learn More</h2>
        <p class="max-w-2xl mb-8 mx-auto text-text text-responsive" select-none>
            Check out Nextla's opening scenes and meet the characters.
        </p>

        <div
            class="flex flex-col md:flex-row md:flex-wrap items-center justify-center space-y-4 md:space-y-0 md:space-x-4"
        >
            <a href="/excerpt" class="btn-primary w-full max-w-[250px]">
                Read the Beginning
            </a>
            <a href="https://x.com/gomezmikeg" class="btn-secondary w-full max-w-[250px]">
                Reach Out
            </a>
        </div>
    </div>
</section>
