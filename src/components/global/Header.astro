---
// Simplified header with hamburger menu
---

<header class="fixed w-full z-50 transition-all duration-300 bg-black">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="text-nextla-bright font-bold text-2xl z-20 relative">Nextla</a>

        <!-- Hamburger Menu Button -->
        <button
            id="menu-toggle"
            class="z-20 relative text-white p-2 focus:outline-none"
            aria-label="Toggle menu"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                class="w-8 h-8"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>

        <!-- Fullscreen Menu Overlay (hidden by default) -->
        <div
            id="menu-overlay"
            class="fixed inset-0 bg-neutral-900/95 backdrop-blur-md z-10 hidden"
        >
            <div
                class="container mx-auto px-4 h-full flex flex-col justify-center items-center"
            >
                <nav class="text-center">
                    <ul class="space-y-6">
                        <li>
                            <a
                                href="/"
                                class="text-white text-2xl hover:text-jade transition-colors"
                                >Home</a
                            >
                        </li>
                        <li>
                            <a
                                href="/about"
                                class="text-white text-2xl hover:text-jade transition-colors"
                                >About</a
                            >
                        </li>
                        <li>
                            <a
                                href="/characters"
                                class="text-white text-2xl hover:text-jade transition-colors"
                                >Characters</a
                            >
                        </li>
                        <li>
                            <a
                                href="/technical"
                                class="text-white text-2xl hover:text-jade transition-colors"
                                >Technical</a
                            >
                        </li>
                        <li>
                            <a
                                href="/contact"
                                class="text-white text-2xl hover:text-jade transition-colors"
                                >Contact</a
                            >
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>

<style>
    .text-nextla-bright {
        color: #4cd3a5; /* Brighter jade/green color */
        text-shadow: 0 0 10px rgba(76, 211, 165, 0.5); /* Add subtle glow */
    }
</style>

<script>
    // Menu toggle functionality
    document.addEventListener("DOMContentLoaded", () => {
        const menuToggle = document.getElementById("menu-toggle");
        const menuOverlay = document.getElementById("menu-overlay");

        menuToggle?.addEventListener("click", () => {
            menuOverlay?.classList.toggle("hidden");

            // Toggle hamburger/close icon
            const svgPath = menuToggle.querySelector("svg path");
            if (svgPath) {
                if (menuOverlay?.classList.contains("hidden")) {
                    svgPath.setAttribute("d", "M4 6h16M4 12h16M4 18h16");
                } else {
                    svgPath.setAttribute("d", "M6 18L18 6M6 6l12 12");
                }
            }
        });
    });
</script>
