---
const {
    characterName = "Unknown Character",
    role = "",
    description = "",
    color = "jade",
    accentColor = "teal-400",
} = Astro.props;

// Generate slug from name
const slug = characterName ? characterName.toLowerCase().replace(/\s+/g, "-") : "unknown";
const svgPath = `/assets/characters/${slug}.svg`;
---

<div
    class={`character-card bg-neutral-800 rounded-lg p-6 border-l-4 border-${color} transition-all hover:shadow-${color}/30 hover:shadow-lg h-full`}
>
    <div class="character-visual mb-4 relative">
        <slot name="character-svg" />
        <div
            class={`absolute -bottom-2 -right-2 w-8 h-8 rounded-full bg-${accentColor} flex items-center justify-center text-neutral-900`}
        >
            <!-- Character icon based on role -->
            {
                role && role.includes("Technician") && (
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z"
                            clip-rule="evenodd"
                        />
                    </svg>
                )
            }
            {
                role && role.includes("Personal AI") && (
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path d="M13 7H7v6h6V7z" />
                        <path
                            fill-rule="evenodd"
                            d="M7 2a1 1 0 012 0v1h2V2a1 1 0 112 0v1h2a2 2 0 012 2v2h1a1 1 0 110 2h-1v2h1a1 1 0 110 2h-1v2a2 2 0 01-2 2h-2v1a1 1 0 11-2 0v-1H9v1a1 1 0 11-2 0v-1H5a2 2 0 01-2-2v-2H2a1 1 0 110-2h1V9H2a1 1 0 010-2h1V5a2 2 0 012-2h2V2zM5 5h10v10H5V5z"
                            clip-rule="evenodd"
                        />
                    </svg>
                )
            }
            {
                role && role.includes("Account Executive") && (
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z"
                            clip-rule="evenodd"
                        />
                    </svg>
                )
            }
            {
                role && role.includes("Developer") && (
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
                            clip-rule="evenodd"
                        />
                    </svg>
                )
            }
            {
                role && role.includes("CEO") && (
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                            clip-rule="evenodd"
                        />
                    </svg>
                )
            }
        </div>
    </div>

    <h3 class={`text-xl font-bold text-white mb-1`}>{characterName}</h3>
    <p class={`text-sm text-${accentColor} mb-3`}>{role}</p>
    <p class="text-neutral-300 mb-4">{description}</p>

    <a
        href={`/characters/${slug}`}
        class={`inline-block px-4 py-2 bg-${color}/20 text-${accentColor} border border-${color}/40 rounded hover:bg-${color}/30 transition-colors`}
    >
        Explore {characterName}'s Story
    </a>
</div>
