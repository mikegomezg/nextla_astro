---
import { getEntry } from "astro:content";

const attentionContent = await getEntry("landing", "attention");
const { title = "Attention Flow", description = "" } = attentionContent?.data || {};
---

<section
    id="attention"
    aria-labelledby="attention-heading"
    class="py-8 md:py-16 px-4 bg-background-alt"
>
    <div class="max-w-6xl mx-auto">
        <h2
            id="attention-heading"
            class="text-2xl md:text-3xl font-bold mb-4 md:mb-6 text-center text-secondary"
        >
            {title}
        </h2>

        {
            description && (
                <p class="text-center max-w-3xl mx-auto mb-6 md:mb-8 text-sm md:text-base">
                    {description}
                </p>
            )
        }

        <div class="mt-4 md:mt-8">
            <!-- Placeholder for the attention flow image -->
            <div
                class="w-full h-60 md:h-96 max-w-4xl mx-auto rounded-lg shadow-md bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center"
            >
                <p class="text-center text-foreground">Attention Flow Visualization</p>
            </div>
        </div>
    </div>
</section>
