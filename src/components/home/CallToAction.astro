---
import Button from "../global/Button.astro";
import FeatherMotif from "../shared/FeatherMotif.astro";
---

<section class="relative py-20 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-neutral-900 via-primary-900 to-neutral-900 z-0"></div>
  
  <!-- Background pattern -->
  <div class="absolute inset-0 z-0 opacity-10">
    <div class="absolute -top-20 -right-20">
      <FeatherMotif width="400" height="400" color="white" rotate="15" />
    </div>
    <div class="absolute -bottom-20 -left-20">
      <FeatherMotif width="400" height="400" color="white" rotate="195" />
    </div>
  </div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 relative z-10 text-center">
    <h2 class="text-jade font-bold text-5xl md:text-6xl mb-6">
      Free to be heard
    </h2>
    
    <p class="text-white text-xl max-w-2xl mx-auto mb-12">
      Join us in exploring Mirador â€“ a world where the freedom to be heard shapes everything from personal identity to societal structure.
    </p>
    
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <Button href="/characters" variant="primary" classes="text-lg px-8">
        Meet the Characters
      </Button>
      <Button href="/technical" variant="secondary" classes="text-lg px-8">
        Explore Technical Concepts
      </Button>
    </div>
  </div>
</section> 