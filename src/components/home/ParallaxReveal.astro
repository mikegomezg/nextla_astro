---
import FeatherMotif from "../shared/FeatherMotif.astro";
---

<section class="relative py-24 overflow-hidden">
    <div class="absolute inset-0 bg-[#06080F] z-0"></div>

    <!-- Circuit pattern background -->
    <div class="absolute inset-0 opacity-5 z-10">
        <div class="absolute top-1/4 left-1/4">
            <FeatherMotif
                width="300"
                height="300"
                color="#5D9E9A"
                opacity="0.5"
                rotate="15"
            />
        </div>
        <div class="absolute bottom-1/4 right-1/4">
            <FeatherMotif
                width="240"
                height="240"
                color="#5D9E9A"
                opacity="0.5"
                rotate="-15"
            />
        </div>
    </div>

    <!-- Static content -->
    <div class="container mx-auto px-4 relative z-20">
        <div class="flex flex-col md:flex-row items-center justify-between">
            <div class="w-full md:w-1/2 mb-10 md:mb-0">
                <h2
                    class="text-4xl md:text-5xl font-bold text-white mb-16 whitespace-nowrap"
                >
                    Imagine a future when
                </h2>
                <p class="text-3xl md:text-4xl font-semibold gradient-text-blue mb-16">
                    Everyone has an audience
                </p>
                <p class="text-3xl md:text-4xl font-semibold gradient-text-blue mb-16">
                    Connection replaces consumption
                </p>
                <p class="text-3xl md:text-4xl font-semibold gradient-text-jade mb-16">
                    Attention is the only limit left
                </p>
            </div>

            <div class="w-full md:w-2/5">
                <div
                    class="bg-[#0e1f29] rounded-lg overflow-hidden shadow-xl p-8 flex justify-center items-center border-2 border-[#74542b]"
                >
                    <img
                        src="/assets/feather.svg"
                        alt="Feather"
                        class="w-full max-w-md h-auto"
                    />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .gradient-text-jade {
        background: linear-gradient(45deg, #3ebfa5 0%, #2a9e87 50%, #5dd0bc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 20px rgba(62, 191, 165, 0.15);
    }

    .gradient-text-blue {
        background: linear-gradient(45deg, #a4c2d2 0%, #8bafc5 50%, #c5dbe6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 20px rgba(164, 194, 210, 0.15);
    }
</style>
