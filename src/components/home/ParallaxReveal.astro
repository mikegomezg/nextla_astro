---
import FeatherMotif from "../shared/FeatherMotif.astro";
---

<section class="parallax-container relative h-screen overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-neutral-900 to-primary-800 z-0"></div>
  
  <!-- Circuit pattern background -->
  <div class="absolute inset-0 opacity-5 z-10">
    <div class="absolute top-1/4 left-1/4">
      <FeatherMotif width="300" height="300" color="white" opacity="0.5" rotate="15" />
    </div>
    <div class="absolute bottom-1/4 right-1/4">
      <FeatherMotif width="240" height="240" color="white" opacity="0.5" rotate="-15" />
    </div>
  </div>
  
  <!-- Parallax text elements -->
  <div class="relative z-20 h-full flex flex-col justify-center items-center text-center px-4">
    <h2 class="text-4xl md:text-6xl font-bold text-white mb-24 parallax-item" data-depth="0.1">
      Imagine a future...
    </h2>
    
    <p class="text-2xl md:text-4xl text-white mb-24 parallax-item" data-depth="0.2">
      when everyone has an audience
    </p>
    
    <p class="text-2xl md:text-4xl text-white mb-24 parallax-item" data-depth="0.3">
      when connection replaces consumption
    </p>
    
    <p class="text-2xl md:text-4xl text-jade font-medium parallax-item" data-depth="0.4">
      when the only limit is attention
    </p>
  </div>
</section>

<script>
  // JavaScript for parallax effect
  document.addEventListener('DOMContentLoaded', () => {
    const parallaxItems = document.querySelectorAll('.parallax-item');
    
    function handleScroll() {
      const scrollY = window.scrollY;
      
      parallaxItems.forEach((item, index) => {
        const depth = parseFloat(item.getAttribute('data-depth'));
        const translateY = scrollY * depth;
        const opacity = Math.max(0, Math.min(1, 1 - (scrollY * 0.001 * (index + 1))));
        
        item.style.transform = `translateY(${translateY}px)`;
        item.style.opacity = opacity;
      });
    }
    
    window.addEventListener('scroll', handleScroll);
    
    // Initialize to handle initial state
    handleScroll();
  });
</script> 