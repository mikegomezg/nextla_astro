---
import Button from "../global/Button.astro";
import FeatherMotif from "../shared/FeatherMotif.astro";
---

<section class="hero relative min-h-screen flex items-center overflow-hidden">
  <!-- Diagonal background -->
  <div class="absolute inset-0 bg-neutral-900 z-0"></div>
  <div class="absolute top-0 right-0 bottom-0 w-2/3 bg-primary-800 transform -skew-x-12 origin-top-right z-0"></div>
  
  <!-- Content container -->
  <div class="container mx-auto px-4 relative z-10 py-20 mt-16">
    <div class="flex flex-col md:flex-row items-center justify-between">
      <!-- Left content -->
      <div class="w-full md:w-1/2 mb-10 md:mb-0">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-2">
          Where AI Management
        </h1>
        <h2 class="text-4xl md:text-6xl font-bold text-teal-400 mb-6">
          Meets Human Psychology
        </h2>
        <p class="text-xl text-jade font-medium mb-8">Free to be heard</p>
        <p class="text-white mb-10 max-w-lg">
          Discover Nextla, where the narrative of AI consciousness and human relationships 
          unfolds in a future where attention is the ultimate currency.
        </p>
        <div class="flex flex-wrap gap-4">
          <Button href="/characters" variant="primary">
            Meet the Characters
          </Button>
          <Button href="/technical" variant="secondary">
            Technical Approach
          </Button>
        </div>
      </div>
      
      <!-- Right content - Dashboard placeholder -->
      <div class="w-full md:w-2/5">
        <div class="dashboard-placeholder bg-neutral-800/80 rounded-lg p-6 border border-white/10 shadow-xl">
          <!-- Placeholder for future dashboard visualization -->
          <div class="aspect-video rounded-md bg-black/50 flex items-center justify-center overflow-hidden relative">
            <span class="text-jade text-9xl font-bold opacity-10">N</span>
            
            <!-- Circuit patterns -->
            <div class="absolute inset-0 flex items-center justify-center opacity-20">
              <FeatherMotif width="200" height="200" color="jade" rotate="30" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative elements -->
  <div class="absolute bottom-10 left-10">
    <FeatherMotif width="120" height="120" color="accent" opacity="0.1" rotate="-15" />
  </div>
  <div class="absolute top-40 right-1/4">
    <FeatherMotif width="80" height="80" color="white" opacity="0.05" rotate="45" />
  </div>
</section> 