---
import Button from "../global/Button.astro";
import FeatherMotif from "../shared/FeatherMotif.astro";
---

<section class="hero relative min-h-screen flex items-center overflow-hidden">
    <!-- Diagonal background -->
    <div class="absolute inset-0 bg-neutral-900 z-0"></div>
    <div
        class="absolute top-0 right-0 bottom-0 w-2/3 bg-primary-800 transform -skew-x-12 origin-top-right z-0"
    >
    </div>

    <!-- Content container -->
    <div class="container mx-auto px-4 relative z-10 py-20">
        <div class="flex flex-col md:flex-row items-center justify-between">
            <!-- Left content - Just the heading -->
            <div class="w-full md:w-1/2 mb-10 md:mb-0">
                <h1 class="text-6xl md:text-8xl font-bold text-white mb-2">
                    Free to be found
                </h1>
            </div>

            <!-- Right content - Just the image -->
            <div class="w-full md:w-2/5">
                <div
                    class="dashboard-placeholder bg-neutral-800/80 rounded-lg overflow-hidden shadow-xl p-4"
                >
                    <div class="grid grid-cols-3 gap-2">
                        <img
                            src="/assets/characters/silas.png"
                            alt="Silas"
                            class="w-full h-auto rounded"
                        />
                        <img
                            src="/assets/characters/nova.png"
                            alt="Nova"
                            class="w-full h-auto rounded"
                        />
                        <img
                            src="/assets/characters/victoria.png"
                            alt="Victoria"
                            class="w-full h-auto rounded"
                        />
                        <img
                            src="/assets/characters/enrique.png"
                            alt="Enrique"
                            class="w-full h-auto rounded"
                        />
                        <img
                            src="/assets/characters/john.png"
                            alt="John"
                            class="w-full h-auto rounded"
                        />
                        <div
                            class="bg-neutral-700/50 rounded flex items-center justify-center"
                        >
                            <FeatherMotif
                                width="60"
                                height="60"
                                color="white"
                                opacity="0.5"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Decorative elements -->
    <div class="absolute bottom-10 left-10">
        <FeatherMotif
            width="120"
            height="120"
            color="accent"
            opacity="0.1"
            rotate="-15"
        />
    </div>
</section>

<style>
    /* Animation for floating elements */
    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    .drop-shadow-glow {
        filter: drop-shadow(0 0 8px rgba(62, 191, 165, 0.3));
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const hamburgerMenu = document.getElementById("hamburger-menu");

        if (hamburgerMenu) {
            hamburgerMenu.addEventListener("click", () => {
                // Add menu functionality here
                console.log("Menu clicked");
            });
        }
    });
</script>
