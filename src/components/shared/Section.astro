---
const { 
  title, 
  id, 
  bgColor = "neutral-900", 
  paddingY = "py-20",
  container = true,
  classes = "" 
} = Astro.props;
---

<section id={id} class={`bg-${bgColor} ${paddingY} ${classes}`}>
  {container ? (
    <div class="container mx-auto px-4">
      {title && (
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-12 text-center">
          {title}
        </h2>
      )}
      <slot />
    </div>
  ) : (
    <>
      {title && (
        <div class="container mx-auto px-4">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-12 text-center">
            {title}
          </h2>
        </div>
      )}
      <slot />
    </>
  )}
</section> 