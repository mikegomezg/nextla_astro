---
const { 
  width = "100", 
  height = "100",
  opacity = "0.15",
  color = "jade",
  classes = "",
  rotate = "0"
} = Astro.props;

// Map color names to hex values
const colorMap = {
  jade: "#3b866e",
  navy: "#1A237E",
  accent: "#A63D2F",
  white: "#FFFFFF"
};

const fillColor = colorMap[color] || color;
---

<svg 
  class={`feather-motif ${classes}`} 
  width={width} 
  height={height} 
  viewBox="0 0 120 160" 
  xmlns="http://www.w3.org/2000/svg"
  style={`opacity: ${opacity}; transform: rotate(${rotate}deg);`}
>
  <!-- Feather shaft -->
  <path 
    d="M60 10 L60 150" 
    stroke={fillColor} 
    stroke-width="2"
    fill="none"
  />
  
  <!-- Circuit patterns -->
  <g fill="none" stroke={fillColor} stroke-width="1.5">
    <!-- Left side circuits -->
    <path d="M60 30 L30 30 L30 40 L45 40" />
    <path d="M60 50 L20 50 L20 70 L40 70 L40 60" />
    <path d="M60 90 L25 90 L25 110 L45 110 L45 100" />
    <path d="M60 130 L30 130 L30 140" />
    
    <!-- Right side circuits -->
    <path d="M60 40 L80 40 L80 20 L95 20" />
    <path d="M60 60 L90 60 L90 80 L100 80" />
    <path d="M60 100 L85 100 L85 120 L95 120" />
    <path d="M60 120 L75 120 L75 140 L90 140" />
  </g>
  
  <!-- Circuit nodes -->
  <g fill={fillColor}>
    <circle cx="30" cy="40" r="2" />
    <circle cx="45" cy="40" r="2" />
    <circle cx="20" cy="70" r="2" />
    <circle cx="40" cy="60" r="2" />
    <circle cx="25" cy="110" r="2" />
    <circle cx="45" cy="100" r="2" />
    <circle cx="30" cy="140" r="2" />
    
    <circle cx="80" cy="20" r="2" />
    <circle cx="95" cy="20" r="2" />
    <circle cx="90" cy="80" r="2" />
    <circle cx="100" cy="80" r="2" />
    <circle cx="85" cy="120" r="2" />
    <circle cx="95" cy="120" r="2" />
    <circle cx="75" cy="140" r="2" />
    <circle cx="90" cy="140" r="2" />
  </g>
  
  <!-- Feather barbs (diagonal lines) -->
  <g stroke={fillColor} stroke-width="1" opacity="0.7">
    <path d="M60 25 L40 15" />
    <path d="M60 35 L35 20" />
    <path d="M60 45 L30 25" />
    <path d="M60 55 L25 30" />
    <path d="M60 65 L20 35" />
    <path d="M60 75 L25 45" />
    <path d="M60 85 L30 55" />
    <path d="M60 95 L35 65" />
    <path d="M60 105 L40 75" />
    <path d="M60 115 L45 85" />
    <path d="M60 125 L50 95" />
    <path d="M60 135 L55 110" />
    
    <path d="M60 25 L80 15" />
    <path d="M60 35 L85 20" />
    <path d="M60 45 L90 25" />
    <path d="M60 55 L95 30" />
    <path d="M60 65 L100 35" />
    <path d="M60 75 L95 45" />
    <path d="M60 85 L90 55" />
    <path d="M60 95 L85 65" />
    <path d="M60 105 L80 75" />
    <path d="M60 115 L75 85" />
    <path d="M60 125 L70 95" />
    <path d="M60 135 L65 110" />
  </g>
</svg> 