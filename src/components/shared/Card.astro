---
const { 
  title, 
  borderColor = "jade", 
  classes = "", 
  darkMode = true
} = Astro.props;

const bgClass = darkMode ? "bg-neutral-800" : "bg-white";
const textClass = darkMode ? "text-white" : "text-neutral-900";
const titleColorClass = `text-${borderColor}`;
---

<div class={`rounded-lg p-6 border-t-4 border-${borderColor} ${bgClass} ${classes} shadow-md`}>
  {title && <h3 class={`text-xl font-bold mb-4 ${titleColorClass}`}>{title}</h3>}
  <div class={textClass}>
    <slot />
  </div>
</div> 