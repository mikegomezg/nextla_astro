---
import cosmicBg from "../assets/visuals/cosmic_vector.svg?url";
---

<section
    id="hero"
    class="relative w-full min-h-[60vh] md:h-[85vh] xsm:h-[40vh] flex flex-col lg:flex-row overflow-hidden bg-background pt-[88px] md:pt-[96px]"
>
    <!-- Left Side: Text -->
    <div
        class="flex flex-col container-xl justify-start items-center lg:items-end w-full lg:w-1/3 h-auto lg:h-full px-4 lg:pl-10 pt-4 lg:pt-12"
    >
        <div class="w-full">
            <h1
                class="text-highlight text-shadow-light dark:text-highlight font-extrabold tracking-wide select-none text-center lg:text-left leading-tight text-4xl md:text-5xl lg:text-6xl"
            >
                <span class="block lg:hidden"> Imagine a balanced world </span>
                <span class="hidden lg:block min-w-[310px] overflow-visible">
                    <div>Imagine</div>
                    <div class="mt-2">a balanced</div>
                    <div class="mt-2">world</div>
                </span>
            </h1>
        </div>
    </div>

    <!-- Right Side: Image -->
    <div
        class="relative w-full lg:w-2/3 h-[40vh] sm:h-[50vh] md:h-[60vh] lg:h-full bg-black overflow-hidden flex items-center justify-center mt-6 lg:mt-0 lg:rounded-bl-xl"
    >
        <div
            class="absolute inset-0 bg-no-repeat bg-cover bg-center rounded-xl drop-shadow-lg"
            style={`background-image: url('${cosmicBg}'); background-size: 110% 140%;`}
        >
        </div>

        <div class="absolute inset-0 bg-black/10 backdrop-brightness-125"></div>
    </div>
</section>
