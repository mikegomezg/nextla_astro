---
// Fetch copy from content/landing/hero.md
import { getEntry } from "astro:content";
// Import the SVG so Vite gives us the final URL
import cosmicBg from "../assets/visuals/cosmic_vector.svg";

const heroContent = await getEntry("landing", "hero");
const {
    title = "Do what you love",
    subtitle = "Imagine when everyone has their audience",
} = heroContent?.data || {};
---

<section
    class="relative w-full h-[80vh] flex items-center justify-center overflow-hidden"
>
    <!-- background -->
    <img
        src={cosmicBg.src}
        alt="Cosmic background"
        class="absolute inset-0 w-full h-full object-cover select-none pointer-events-none"
        loading="eager"
    />

    <!-- text overlay -->
    <div class="relative z-10 text-center px-6">
        <h1 class="text-5xl md:text-7xl font-bold text-textDefault drop-shadow-lg">
            {title}
        </h1>
        <p class="mt-4 text-2xl md:text-3xl text-textMuted drop-shadow">
            {subtitle}
        </p>
    </div>
</section>
