---
import cosmicBg from "../assets/visuals/cosmic_vector.svg?url";
---

<section id="hero" class="relative w-full h-[70vh] flex flex-col lg:flex-row overflow-hidden bg-background">
  <!-- Left Side -->
  <div class="flex flex-col justify-center items-center lg:items-end w-full lg:w-1/3 h-full px-4 lg:px-8 py-8 lg:py-0">
    <div class="card-style-hero flex-shrink-0 min-w-[300px] max-w-[400px] md:max-w-[500px] lg:ml-8">
      <h1 class="text-highlight text-5xl md:text-6xl lg:text-7xl font-extrabold tracking-wide select-none text-left leading-tight">
        <span class="md:hidden">
          <div>Imagine</div>
          <div class="mt-2">a balanced</div>
          <div class="mt-2">world</div>
        </span>
        <span class="hidden md:inline">
          Imagine a balanced world
        </span>
      </h1>
    </div>
  </div>

  <!-- Vertical Green Bar (only light mode) -->
  <div class="hidden lg:block w-[4px] h-full bg-highlight dark:hidden"></div>

  <!-- Right Side -->
  <div class="relative w-full lg:w-2/3 h-[60vh] lg:h-full bg-black overflow-hidden flex items-center justify-center">
    <div class="absolute inset-0 bg-no-repeat bg-cover bg-center"
         style={`background-image: url('${cosmicBg}'); background-size: 110% 140%; background-position: center;`}>
    </div>
    <div class="absolute inset-0 bg-black/10 backdrop-brightness-125"></div>
  </div>
</section>

<!-- Bottom accent border -->
<div class="h-[4px] bg-highlight bg-repeat-x bg-center bg-[length:100px_4px]"></div>

<style>
  .card-style-hero {
    @apply z-20 flex flex-col items-start justify-center
           text-left p-6
           bg-surface/70 dark:bg-surface/80 rounded-xl shadow-lg backdrop-blur-md
           w-full;
  }
</style>
