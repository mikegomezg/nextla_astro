---
import cosmicBg from "../assets/visuals/cosmic_vector.svg?url";
---

<section
    id="hero"
    class="relative w-full h-[70vh] flex flex-col lg:flex-row overflow-hidden bg-background container-xl"
>
    <!-- Left Side: Text -->
    <div
        class="flex flex-col justify-start items-center lg:items-end w-full lg:w-1/3 h-auto lg:h-full px-4 lg:px-8 pt-8"
    >
        <div class="min-w-[300px] max-w-[400px] lg:max-w-[500px] w-full">
            <h1
                class="text-highlight font-extrabold tracking-wide select-none text-left leading-tight
                 text-4xl md:text-5xl lg:text-6xl"
            >
                <span class="hidden sm:block">
                    <div>Imagine</div>
                    <div class="mt-2">a balanced</div>
                    <div class="mt-2">world</div>
                </span>
                <span class="block sm:hidden"> Imagine a balanced world </span>
            </h1>
        </div>
    </div>

    <!-- Vertical Green Bar (light mode only) -->
    <div class="hidden lg:block dark:hidden w-[4px] h-full bg-highlight"></div>

    <!-- Right Side: Image -->
    <div class="relative w-full lg:w-2/3 bg-black overflow-hidden">
        <div
            class="absolute inset-0 bg-cover-center"
            style={`background-image: url('${cosmicBg}');`}
        >
        </div>
        <div class="absolute inset-0 bg-black/10 backdrop-brightness-125"></div>
    </div>
</section>

<!-- Bottom accent border -->
<div class="divider"></div>
