---
import cosmicBg from "../assets/visuals/cosmic_vector.svg?url";
---
<section
    id="hero"
    class="relative w-full h-[70vh] flex flex-col lg:flex-row overflow-hidden bg-background container-xl"
>
    <!-- Left Side: Text -->
    <div class="flex flex-col justify-start items-center lg:items-end w-full lg:w-1/3 h-auto lg:h-full px-4 lg:pl-8 pt-8">
        <div class="min-w-[320px] max-w-[400px] lg:max-w-[500px] w-full">
            <h1 class="text-highlight font-extrabold tracking-wide select-none text-left leading-tight text-4xl md:text-5xl lg:text-6xl">
                <span class="block lg:hidden">
                    Imagine a balanced world
                </span>
                <span class="hidden lg:block">
                    <div>Imagine</div>
                    <div class="mt-2">a balanced</div>
                    <div class="mt-2">world</div>
                </span>
            </h1>
        </div>
    </div>

    <!-- Vertical Green Bar (light mode only) -->
    <div class="hidden lg:block dark:hidden w-[4px] h-full bg-highlight"></div>

    <!-- Right Side: Image -->
    <div class="relative w-full h-[40vh] sm:h-[50vh] md:h-[60vh] lg:h-full bg-black overflow-hidden flex items-center justify-center">
        <div 
            class="absolute inset-0 bg-no-repeat bg-cover bg-center"
            style={`background-image: url('${cosmicBg}'); background-size: 110% 140%;`}
        ></div>


        <div class="absolute inset-0 bg-black/10 backdrop-brightness-125"></div>
    </div>
</section>

<!-- Bottom accent border -->
<div class="divider"></div>
