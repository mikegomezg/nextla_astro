---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";

// Import landing image
import heroImg from "../assets/hero/hero.png";

const heroContent = await getEntry("landing", "hero");

if (!heroContent) {
    throw new Error("Hero content not found: hero entry missing from landing collection");
}

const { title, subtitle } = heroContent.data;
---

<div
    class="w-full max-w-screen-xl mx-auto px-4 py-16 grid grid-cols-1 md:grid-cols-5 gap-12 items-center"
>
    <!-- Text on the Left -->
    <div class="text-left max-w-m md:col-span-2">
        <h1 class="text-8xl md:text-6xl font-bold text-textDefault leading-tight">
            Do what you love
        </h1>
        <p class="text-4xl mt-6 text-textMuted">
            Imagine when everyone has their own audience
        </p>
    </div>

    <!-- Responsive Image on the Right -->
    <div class="relative w-full rounded-[5px] overflow-hidden shadow-xl md:col-span-3">
        <Image
            src={heroImg}
            alt="Cosmic Background"
            width={1200}
            height={900}
            format="webp"
            sizes="(max-width: 1024px) 100vw, 60vw"
            loading="eager"
            class="w-full h-auto object-cover"
        />
    </div>
</div>
