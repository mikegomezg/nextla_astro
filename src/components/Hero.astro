---
import cosmicBg from "../assets/visuals/curve.png?url";
---

<section
    id="hero"
    transition:animate="none"
    class="relative w-full min-h-[60vh] md:h-[85vh] xsm:h-[40vh] flex flex-col lg:flex-row overflow-x-hidden bg-background pt-[88px] md:pt-[96px]"
>
    <!-- Left Side: Text -->
    <div
        class="flex flex-col container-xl justify-start items-center lg:min-w-[380px] lg:items-end w-full md:w-full lg:w-1/3 h-auto lg:h-full px-4 lg:pr-10 pt-4 lg:pt-12"
    >
        <div
            class="w-full flex justify-center lg:grid lg:grid-cols-[1fr_auto] lg:gap-4 min-h-44px"
        >
            <!-- Left spacer -->
            <div class="hidden lg:block"></div>

            <!-- Right H1 block -->
            <div class="lg:max-w-[320px]">
                <h1
                    class="font-headings text-effect-gradient text-shadow-light font-extrabold tracking-wide select-none text-center lg:text-left lg:leading-tight text-4xl md:text-4xl lg:text-7xl"
                >
                    <span class="block py-1">Imagine&nbsp;a balanced world</span>
                </h1>
            </div>
        </div>
    </div>

    <!-- Right Side: Image -->
    <div
        class="relative w-full lg:w-2/3 h-[40vh] sm:h-[50vh] md:h-[60vh] lg:h-full bg-black overflow-hidden flex items-center justify-center mt-6 lg:mt-0 lg:rounded-bl-xl"
    >
        <div
            class="absolute inset-0 bg-no-repeat bg-cover bg-center rounded-xl drop-shadow-lg"
            style={`background-image: url('${cosmicBg}');`}
        >
        </div>

        <div class="absolute inset-0 bg-black/10 backdrop-brightness-125"></div>
    </div>
</section>
