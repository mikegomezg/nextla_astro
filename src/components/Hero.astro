// Either A (string via ?url)      ↓
// import cosmicBg from "../assets/visuals/cosmic_vector.svg?url";

// Or B (object → .src)            ↓
import cosmicAsset from "../assets/visuals/cosmic_vector.svg";
const cosmicBg: string = (cosmicAsset as any).src ?? cosmicAsset;

/* Tiny sanity check — remove later */
console.info("Hero background URL:", cosmicBg);
---

<section
    id="hero"
    class="relative flex items-center justify-center overflow-hidden
         bg-center bg-cover pt-32 md:pt-40"
    style={`background-image:url('${cosmicBg}');min-height:60vh;max-height:820px`}
>
    <!-- remove this div if you need to see the SVG unobscured -->
    <div class="absolute inset-0 bg-background/60 backdrop-blur-sm"></div>

    <div class="relative z-10 max-w-4xl w-full px-6 text-center flex flex-col space-y-6">
        <h1
            class="text-3xl sm:text-5xl md:text-6xl font-extrabold text-highlight leading-tight"
        >
            Do what you love
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-text max-w-2xl">
            Imagine a future where everyone has the attention they deserve.
        </p>
        <a
            href="#cta"
            class="inline-block px-8 py-3 rounded-lg bg-secondary/90 hover:bg-secondary
             text-text font-semibold shadow-md transition-colors"
        >
            Read the excerpt
        </a>
    </div>
</section>
