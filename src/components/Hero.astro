---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";

// Import landing image
import landingImg from "../assets/visuals/attention-flow.png";

const heroContent = await getEntry("landing", "hero");

if (!heroContent) {
    throw new Error("Hero content not found: hero entry missing from landing collection");
}

const { title, subtitle } = heroContent.data;
---

<section class="grid grid-cols-1 md:grid-cols-3 gap-4 items-center px-6 py-20">
    <div class="md:col-span-2 order-2 md:order-1">
        <Image
            src={landingImg}
            alt="Cosmic Background"
            loading="eager"
            class="w-full max-h-[600px] object-contain mx-auto"
            width={800}
            height={600}
        />
    </div>
    <div
        class="text-right md:col-span-1 order-1 md:order-2 flex flex-col justify-center gap-4"
    >
        <h1 class="text-4xl md:text-6xl font-bold text-primary">
            {title || "Do what you love."}
        </h1>
        <p class="text-xl text-foreground">
            {subtitle || "Imagine when everybody has their audience."}
        </p>
        <div class="mt-6">
            <a
                href="#feather"
                class="inline-block bg-primary hover:bg-opacity-90 text-background font-bold py-3 px-8 rounded-lg transition-colors text-center"
            >
                Learn More
            </a>
        </div>
    </div>
</section>
