---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";

// Use the existing attention-flow image since cosmic.jpg doesn't exist
import cosmicImg from "../assets/visuals/attention-flow.png";

const heroContent = await getEntry("landing", "hero");

if (!heroContent) {
    throw new Error("Hero content not found: hero entry missing from landing collection");
}

const { title, subtitle } = heroContent.data;
---

<section
    id="hero"
    aria-labelledby="hero-heading"
    class="min-h-[90vh] flex flex-col items-center justify-center py-8 md:py-16 px-4 bg-gradient-to-b from-background to-background relative overflow-hidden"
>
    <div class="absolute inset-0 z-0">
        <div
            class="w-full h-full bg-gradient-to-br from-primary/20 to-highlight/30 flex items-center justify-center"
        >
            <Image
                src={cosmicImg}
                alt="Cosmic background"
                class="w-full h-full object-contain opacity-70"
                width={800}
                height={600}
                loading="eager"
                quality={90}
            />
        </div>
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>
    </div>

    <div class="max-w-4xl mx-auto w-full relative z-10 text-center">
        <h1
            id="hero-heading"
            class="text-3xl md:text-5xl lg:text-6xl font-bold text-white mb-6"
        >
            {title || "Do what you love."}
        </h1>
        <p class="text-xl md:text-2xl text-white font-light mb-8 max-w-2xl mx-auto">
            {subtitle || "Imagine when everybody has their audience."}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
                href="#feather"
                class="bg-primary hover:bg-opacity-90 text-background font-bold py-3 px-8 rounded-lg transition-colors text-center"
            >
                Learn More
            </a>
        </div>
    </div>
</section>
