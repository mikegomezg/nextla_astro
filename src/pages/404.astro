---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/global/Button.astro";
import FeatherMotif from "../components/shared/FeatherMotif.astro";
---

<BaseLayout
  title="Page Not Found | Nextla"
  description="The page you were looking for could not be found."
>
  <div class="min-h-screen flex flex-col bg-neutral-900 relative overflow-hidden">
    <!-- Background patterns -->
    <div class="absolute inset-0 z-0 opacity-10">
      <div class="absolute top-0 right-0">
        <FeatherMotif width="400" height="400" color="primary-500" rotate="30" />
      </div>
      <div class="absolute bottom-0 left-0">
        <FeatherMotif width="400" height="400" color="accent-500" rotate="-30" />
      </div>
    </div>
    
    <!-- Content -->
    <div class="flex-grow flex flex-col items-center justify-center px-4 relative z-10">
      <div class="text-center max-w-lg">
        <h1 class="text-9xl font-bold text-jade mb-4">404</h1>
        <h2 class="text-3xl font-bold text-white mb-6">Signal Lost</h2>
        <p class="text-neutral-400 mb-8">
          The page you're looking for has disappeared into the attention economy. 
          Perhaps it's being reconciled, or perhaps it's transformed into something new.
        </p>
        
        <div class="space-y-4">
          <Button href="/" variant="primary" classes="w-full">
            Return to Home
          </Button>
          <Button href="/characters" variant="secondary" classes="w-full">
            Explore Characters
          </Button>
        </div>
      </div>
      
      <!-- Decorative glitch effect -->
      <div class="w-full max-w-sm mt-12 relative">
        <div class="h-px bg-jade w-full"></div>
        <div class="h-1 bg-jade/20 w-full mt-2 relative overflow-hidden">
          <div class="absolute h-full bg-jade/70 w-16 animate-glitch"></div>
        </div>
        <div class="h-px bg-jade w-full mt-2"></div>
      </div>
    </div>
    
    <!-- Footer link -->
    <div class="pb-8 text-center relative z-10">
      <a href="/contact" class="text-jade hover:text-white transition-colors">
        Report this missing signal
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  @keyframes glitch {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(400%); }
  }
  
  .animate-glitch {
    animation: glitch 3s ease-in-out infinite;
  }
</style> 