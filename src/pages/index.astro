---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import VariantSelector from '../components/VariantSelector.astro';

// Import all landing page variants
import DefaultVariant from '../components/landing-variants/DefaultVariant.astro';
import MotionVariant from '../components/landing-variants/MotionVariant.astro';
import MinimalVariant from '../components/landing-variants/MinimalVariant.astro';
import ImmersiveVariant from '../components/landing-variants/ImmersiveVariant.astro';
import DiagonalVariant from '../components/landing-variants/DiagonalVariant.astro';
import CardsVariant from '../components/landing-variants/CardsVariant.astro';
import ParallaxVariant from '../components/landing-variants/ParallaxVariant.astro';
import DarkMinimalVariant from '../components/landing-variants/DarkMinimalVariant.astro';
import DarkDiagonalVariant from '../components/landing-variants/DarkDiagonalVariant.astro';
import DarkCardsVariant from '../components/landing-variants/DarkCardsVariant.astro';
---

<Layout title="Nextla - Where AI Management Meets Human Psychology">
  <Navbar />
  
  <!-- Landing Page Variants -->
  <main>
    <!-- Default Variant - Character Focus -->
    <div id="variant-default" class="landing-variant">
      <DefaultVariant />
    </div>
    
    <!-- Motion Variant - Dynamic Experience -->
    <div id="variant-motion" class="landing-variant hidden">
      <MotionVariant />
    </div>
    
    <!-- Minimal Variant - Clean & Simple -->
    <div id="variant-minimal" class="landing-variant hidden">
      <MinimalVariant />
    </div>
    
    <!-- Immersive Variant - Full Experience -->
    <div id="variant-immersive" class="landing-variant hidden">
      <ImmersiveVariant />
    </div>
    
    <!-- Diagonal Variant - Split Layout -->
    <div id="variant-diagonal" class="landing-variant hidden">
      <DiagonalVariant />
    </div>
    
    <!-- Cards Variant - Interactive Grid -->
    <div id="variant-cards" class="landing-variant hidden">
      <CardsVariant />
    </div>
    
    <!-- Parallax Variant - Depth Effect -->
    <div id="variant-parallax" class="landing-variant hidden">
      <ParallaxVariant />
    </div>
    
    <!-- Dark Minimal Variant - Clean Dark Theme -->
    <div id="variant-dark-minimal" class="landing-variant hidden">
      <DarkMinimalVariant />
    </div>
    
    <!-- Dark Diagonal Variant - Angular Dark Theme -->
    <div id="variant-dark-diagonal" class="landing-variant hidden">
      <DarkDiagonalVariant />
    </div>
    
    <!-- Dark Cards Variant - Card-based Dark Layout -->
    <div id="variant-dark-cards" class="landing-variant hidden">
      <DarkCardsVariant />
    </div>
  </main>
  
  <!-- Variant Selector -->
  <VariantSelector />
</Layout>

<style>
  .landing-variant {
    display: block;
  }
  
  .landing-variant.hidden {
    display: none;
  }
</style> 