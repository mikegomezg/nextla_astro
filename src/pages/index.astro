---
import MinimalLayout from '../layouts/MinimalLayout.astro';
import Header from '../components/Header.astro';
import Dashboard from '../components/Dashboard.astro';
import ExploreButton from '../components/ExploreButton.astro';
import FeatherBackground from '../components/FeatherBackground.astro';

// Get variation from URL parameter (v=1, v=2, or v=3)
const { url } = Astro;
const params = url.searchParams;
const variation = params.get('v') || '1';

// Map variation to a descriptive name
const variationName = {
  '1': 'Attention Economy Focus',
  '2': 'City-States Conflict',
  '3': 'Manifestations Mystery'
}[variation];

// Unified color scheme
const colors = {
  darkNavy: '#05061A',
  navy: '#0A0C35',
  jade: '#2E6E4E',
  red: '#A63D2F'
};
---

<MinimalLayout 
  title="Nextla - Attention as Currency" 
  description="Managing AI capabilities in the attention economy"
>
  <div class="relative min-h-screen flex flex-col bg-slate-900">
    <Header />
    
    <!-- Hero Section -->
    <section class="relative min-h-screen flex flex-col items-center justify-center px-4 overflow-hidden">
      <!-- Animated feather background -->
      <FeatherBackground />
      
      <!-- Logo -->
      <div class="z-10 mb-8">
        <div class="flex items-center gap-2">
          <div class="h-12 w-12 rounded-full bg-teal-500 flex items-center justify-center">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="white" strokeWidth="2" />
              <path d="M2 17L12 22L22 17" stroke="white" strokeWidth="2" />
              <path d="M2 12L12 17L22 12" stroke="white" strokeWidth="2" />
            </svg>
          </div>
          <h1 class="text-2xl font-bold">NEXTLA</h1>
        </div>
      </div>
      
      <!-- Title -->
      <h2 class="text-4xl md:text-5xl font-bold text-center z-10 mb-4">Attention as Currency</h2>
      <p class="text-lg md:text-xl text-center text-slate-300 max-w-md z-10 mb-8">
        Managing AI capabilities in the attention economy
      </p>
      
      <!-- Dashboard -->
      <div class="w-full max-w-md z-10 mb-8">
        <Dashboard />
      </div>
      
      <!-- CTA Button -->
      <div class="z-10">
        <ExploreButton />
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-16 px-4">
      <div class="max-w-md mx-auto">
        <h2 class="text-2xl font-bold mb-12 text-center">The Attention Economy</h2>
        
        <div class="space-y-12">
          <!-- Feature 1 -->
          <div class="flex gap-4">
            <div class="mt-1 bg-teal-500/20 p-2 rounded-lg h-min">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-teal-500">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-xl mb-2">AI Capabilities</h3>
              <p class="text-slate-300">
                Specialized AI entities with unique personalities licensed to creators to enhance content and capture attention.
              </p>
            </div>
          </div>
          
          <!-- Feature 2 -->
          <div class="flex gap-4">
            <div class="mt-1 bg-amber-500/20 p-2 rounded-lg h-min">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-xl mb-2">Creator Economy</h3>
              <p class="text-slate-300">
                The marketplace where creators license AI capabilities to produce content that captures and monetizes viewer attention.
              </p>
            </div>
          </div>
          
          <!-- Feature 3 -->
          <div class="flex gap-4">
            <div class="mt-1 bg-rose-500/20 p-2 rounded-lg h-min">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-rose-500">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                <line x1="12" y1="9" x2="12" y2="13"></line>
                <line x1="12" y1="17" x2="12.01" y2="17"></line>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-xl mb-2">Anomalies</h3>
              <p class="text-slate-300">
                System irregularities that manifest when AI capability usage exceeds licensed entitlements, disrupting the digital environment.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Character Section -->
    <section class="py-16 px-4 bg-slate-800">
      <div class="max-w-md mx-auto">
        <h2 class="text-2xl font-bold mb-12 text-center">Key Characters</h2>
        
        <div class="space-y-8">
          <!-- Character 1 -->
          <div class="bg-slate-700 rounded-lg overflow-hidden">
            <div class="h-32 bg-gradient-to-r from-slate-600 to-slate-700 flex items-center justify-center">
              <div class="h-16 w-16 rounded-full bg-slate-900 flex items-center justify-center">
                <span class="text-2xl">S</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="font-bold text-xl mb-1">Silas Hale</h3>
              <p class="text-sm text-slate-400 mb-3">Toltek Reconciliation Technician</p>
              <p class="text-slate-300">
                Investigates anomalies and ensures balance between AI capability usage and creator entitlements.
              </p>
            </div>
          </div>
          
          <!-- Character 2 -->
          <div class="bg-slate-700 rounded-lg overflow-hidden">
            <div class="h-32 bg-gradient-to-r from-slate-600 to-slate-700 flex items-center justify-center">
              <div class="h-16 w-16 rounded-full bg-slate-900 flex items-center justify-center">
                <span class="text-2xl">V</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="font-bold text-xl mb-1">Victoria Ford</h3>
              <p class="text-sm text-slate-400 mb-3">Toltek Account Executive</p>
              <p class="text-slate-300">
                Manages creator relationships and helps them optimize their licensed AI capabilities.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- SAM Connection Section -->
    <section class="py-16 px-4">
      <div class="max-w-md mx-auto">
        <h2 class="text-2xl font-bold mb-6 text-center">ServiceNow SAM Parallel</h2>
        <p class="text-center text-slate-300 mb-12">
          Exploring software asset management through the lens of attention economy
        </p>
        
        <div class="space-y-4">
          <div class="bg-slate-800 p-4 rounded-lg flex justify-between items-center">
            <span>AI Entities</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
            <span>Software Assets</span>
          </div>
          <div class="bg-slate-800 p-4 rounded-lg flex justify-between items-center">
            <span>Creator Licenses</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
            <span>Entitlements</span>
          </div>
          <div class="bg-slate-800 p-4 rounded-lg flex justify-between items-center">
            <span>Attention Usage</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
            <span>Installation Data</span>
          </div>
          <div class="bg-slate-800 p-4 rounded-lg flex justify-between items-center">
            <span>Balance Evaluation</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
            <span>Reconciliation</span>
          </div>
          <div class="bg-slate-800 p-4 rounded-lg flex justify-between items-center">
            <span>Anomaly Detection</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
            <span>Compliance Position</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-slate-900 py-8 px-4 border-t border-slate-800">
      <div class="max-w-md mx-auto">
        <div class="flex justify-between items-center mb-6">
          <div class="flex items-center gap-2">
            <div class="h-8 w-8 rounded-full bg-teal-500 flex items-center justify-center">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="white" strokeWidth="2" />
                <path d="M2 17L12 22L22 17" stroke="white" strokeWidth="2" />
                <path d="M2 12L12 17L22 12" stroke="white" strokeWidth="2" />
              </svg>
            </div>
            <span class="font-bold">NEXTLA</span>
          </div>
        </div>
        
        <p class="text-sm text-slate-400 text-center">
          A creative exploration of SAM principles through AI attention economy
        </p>
        
        <div class="mt-6 text-center">
          <button class="text-sm text-teal-400 hover:text-teal-300 transition-colors">
            Visit Full Project
          </button>
        </div>
      </div>
    </footer>
  </div>
</MinimalLayout>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }
</style> 