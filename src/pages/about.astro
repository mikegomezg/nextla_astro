---
import BaseLayout from '../layouts/BaseLayout.astro';
import AztecPattern from '../components/decorative/AztecPattern.astro';
---

<BaseLayout 
  title="About Nextla" 
  description="About Nextla - A modern approach to attention management in enterprise software."
>
  <!-- About Nextla Section with Hero Image and Pattern -->
  <div 
    class="relative bg-cover bg-center py-24 bg-primary-800" 
  >
    <AztecPattern pattern="grid" opacity={0.1} color="#FFFFFF" className="about-pattern" />
    
    <div class="container mx-auto px-8 relative z-10">
      <h1 class="text-4xl font-heading font-bold text-white mb-6">About Nextla</h1>
      <p class="text-xl text-white max-w-2xl">
        Nextla combines the timeless wisdom of Mesoamerican design principles with modern user
        interface patterns to create a more focused and productive software experience.
      </p>
    </div>
  </div>

  <!-- Title and Description -->
  <div class="container mx-auto px-8 py-16">
    <div class="flex flex-col md:flex-row gap-12">
      <div class="md:w-1/3">
        <h2 class="text-3xl font-heading font-medium mb-4">Title</h2>
      </div>
      <div class="md:w-2/3">
        <p class="text-lg mb-4">
          Our approach helps users maintain attention on what matters most, reducing
          cognitive load and creating more intuitive enterprise applications.
        </p>
      </div>
    </div>
  </div>

  <!-- Documentation Section with Tribute Pattern -->
  <div class="relative bg-neutral-100 py-16">
    <AztecPattern pattern="tribute" opacity={0.05} color="#1A237E" className="docs-pattern" />
    
    <div class="container mx-auto px-8 relative z-10">
      <div class="flex flex-col md:flex-row gap-12">
        <div class="md:w-1/3">
          <h2 class="text-3xl font-heading font-medium mb-4">Documentation</h2>
        </div>
        <div class="md:w-2/3">
          <p class="text-lg mb-4">
            Explore our technical documentation to understand how Nextla can be implemented in
            your projects.
          </p>
          <a href="/docs" class="inline-block bg-primary-500 text-white px-6 py-3 rounded hover:bg-primary-600 transition mt-4">
            View Documentation
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 